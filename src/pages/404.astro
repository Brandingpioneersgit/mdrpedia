---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 ‚Äî Page Not Found | MDRPedia">
    <div class="error-page">
        <!-- Animated Background -->
        <div class="error-bg">
            <div class="orb orb-1"></div>
            <div class="orb orb-2"></div>
            <div class="orb orb-3"></div>
        </div>

        <div class="error-content">
            <!-- Animated 404 -->
            <div class="error-code">
                <span class="digit">4</span>
                <span class="digit pulse">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                        <path d="M12 8v4M12 16h.01" />
                    </svg>
                </span>
                <span class="digit">4</span>
            </div>

            <h1 class="error-title">Page Not Found</h1>
            <p class="error-description">
                The profile or page you're looking for might have been moved,
                renamed, or is pending verification in our database.
            </p>

            <!-- Quick Actions -->
            <div class="error-actions">
                <a href="/" class="btn-primary">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
                        <polyline points="9,22 9,12 15,12 15,22" />
                    </svg>
                    Return Home
                </a>
                <a href="/doctors" class="btn-secondary">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2" />
                        <circle cx="9" cy="7" r="4" />
                        <path d="M23 21v-2a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75" />
                    </svg>
                    Browse Doctors
                </a>
            </div>

            <!-- Search Box -->
            <div class="search-card">
                <div class="search-header">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8" />
                        <path d="m21 21-4.3-4.3" />
                    </svg>
                    <span>Looking for a specific doctor?</span>
                </div>
                <form action="/doctors" method="get" class="search-form">
                    <input
                        type="text"
                        name="q"
                        placeholder="Search by name, specialty, or institution..."
                        class="search-input"
                        autocomplete="off"
                    />
                    <button type="submit" class="search-btn">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M5 12h14M12 5l7 7-7 7" />
                        </svg>
                    </button>
                </form>
            </div>

            <!-- Popular Links -->
            <div class="popular-links">
                <span class="links-label">Popular destinations:</span>
                <div class="links-grid">
                    <a href="/rankings" class="quick-link">
                        <span class="link-icon">üèÜ</span>
                        Rankings
                    </a>
                    <a href="/rare-diseases" class="quick-link">
                        <span class="link-icon">üß¨</span>
                        Rare Diseases
                    </a>
                    <a href="/hospitals" class="quick-link">
                        <span class="link-icon">üè•</span>
                        Hospitals
                    </a>
                    <a href="/doctor/claim" class="quick-link">
                        <span class="link-icon">‚úì</span>
                        Claim Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .error-page {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 60px 20px;
        position: relative;
        overflow: hidden;
    }

    /* Animated Background */
    .error-bg {
        position: absolute;
        inset: 0;
        pointer-events: none;
        overflow: hidden;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        animation: float 20s ease-in-out infinite;
    }

    .orb-1 {
        width: 400px;
        height: 400px;
        background: rgba(139, 92, 246, 0.3);
        top: -100px;
        left: -100px;
        animation-delay: 0s;
    }

    .orb-2 {
        width: 300px;
        height: 300px;
        background: rgba(59, 130, 246, 0.25);
        bottom: -50px;
        right: -50px;
        animation-delay: -7s;
    }

    .orb-3 {
        width: 200px;
        height: 200px;
        background: rgba(236, 72, 153, 0.2);
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-delay: -14s;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0) scale(1); }
        25% { transform: translate(30px, -30px) scale(1.05); }
        50% { transform: translate(-20px, 20px) scale(0.95); }
        75% { transform: translate(20px, 30px) scale(1.02); }
    }

    .error-content {
        max-width: 540px;
        text-align: center;
        position: relative;
        z-index: 1;
    }

    /* 404 Code */
    .error-code {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-bottom: 24px;
    }

    .digit {
        font-size: 6rem;
        font-weight: 900;
        letter-spacing: -0.05em;
        background: linear-gradient(135deg, #fff 0%, rgba(255, 255, 255, 0.6) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
        animation: fade-in 0.6s ease-out both;
    }

    .digit:nth-child(1) { animation-delay: 0.1s; }
    .digit:nth-child(3) { animation-delay: 0.3s; }

    .digit.pulse {
        width: 100px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(139, 92, 246, 0.05));
        border: 2px solid rgba(139, 92, 246, 0.3);
        border-radius: 24px;
        animation: pulse-border 2s ease-in-out infinite, fade-in 0.6s ease-out 0.2s both;
    }

    .digit.pulse svg {
        width: 48px;
        height: 48px;
        color: #a78bfa;
    }

    @keyframes pulse-border {
        0%, 100% {
            border-color: rgba(139, 92, 246, 0.3);
            box-shadow: 0 0 0 0 rgba(139, 92, 246, 0.2);
        }
        50% {
            border-color: rgba(139, 92, 246, 0.6);
            box-shadow: 0 0 30px rgba(139, 92, 246, 0.3);
        }
    }

    @keyframes fade-in {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .error-title {
        font-size: 2.25rem;
        font-weight: 800;
        color: white;
        margin: 0 0 12px;
        letter-spacing: -0.02em;
        animation: fade-in 0.6s ease-out 0.3s both;
    }

    .error-description {
        font-size: 1.1rem;
        color: var(--text-secondary);
        line-height: 1.7;
        margin: 0 0 32px;
        animation: fade-in 0.6s ease-out 0.4s both;
    }

    /* Actions */
    .error-actions {
        display: flex;
        gap: 12px;
        justify-content: center;
        margin-bottom: 40px;
        animation: fade-in 0.6s ease-out 0.5s both;
    }

    .btn-primary,
    .btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 24px;
        border-radius: 14px;
        font-weight: 600;
        font-size: 0.95rem;
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #a855f7, #7c3aed);
        color: white;
        box-shadow: 0 10px 30px -10px rgba(168, 85, 247, 0.5);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 40px -10px rgba(168, 85, 247, 0.6);
    }

    .btn-secondary {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.12);
        color: white;
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
    }

    .btn-primary svg,
    .btn-secondary svg {
        width: 18px;
        height: 18px;
    }

    /* Search Card */
    .search-card {
        background: linear-gradient(145deg, rgba(30, 30, 50, 0.8), rgba(20, 20, 40, 0.6));
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 24px;
        margin-bottom: 32px;
        animation: fade-in 0.6s ease-out 0.6s both;
    }

    .search-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 16px;
        color: white;
        font-weight: 600;
    }

    .search-header svg {
        width: 18px;
        height: 18px;
        color: #a78bfa;
    }

    .search-form {
        display: flex;
        gap: 8px;
    }

    .search-input {
        flex: 1;
        padding: 14px 18px;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: white;
        font-size: 0.95rem;
        outline: none;
        transition: all 0.2s;
    }

    .search-input::placeholder {
        color: var(--text-muted);
    }

    .search-input:focus {
        border-color: rgba(139, 92, 246, 0.5);
        box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
    }

    .search-btn {
        padding: 14px 18px;
        background: linear-gradient(135deg, #a855f7, #7c3aed);
        border: none;
        border-radius: 12px;
        color: white;
        cursor: pointer;
        transition: all 0.2s;
    }

    .search-btn:hover {
        transform: scale(1.05);
    }

    .search-btn svg {
        width: 18px;
        height: 18px;
    }

    /* Popular Links */
    .popular-links {
        animation: fade-in 0.6s ease-out 0.7s both;
    }

    .links-label {
        display: block;
        font-size: 0.8rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 16px;
    }

    .links-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
    }

    .quick-link {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        padding: 16px 12px;
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 14px;
        color: var(--text-secondary);
        font-size: 0.85rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
    }

    .quick-link:hover {
        background: rgba(139, 92, 246, 0.1);
        border-color: rgba(139, 92, 246, 0.2);
        color: white;
        transform: translateY(-2px);
    }

    .link-icon {
        font-size: 1.4rem;
    }

    @media (max-width: 640px) {
        .digit {
            font-size: 4rem;
        }

        .digit.pulse {
            width: 70px;
            height: 70px;
        }

        .digit.pulse svg {
            width: 32px;
            height: 32px;
        }

        .error-title {
            font-size: 1.75rem;
        }

        .error-description {
            font-size: 1rem;
        }

        .error-actions {
            flex-direction: column;
        }

        .links-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
