---
export const prerender = true;
/**
 * MDRPedia ‚Äî Enhanced Search Results Page
 * Features real-time autocomplete, keyboard navigation, and improved UX
 */
import Layout from "../layouts/Layout.astro";
import TierBadge from "../components/TierBadge.astro";
import EnhancedSearch from "../components/EnhancedSearch";
import { getCollection } from "astro:content";

const query = Astro.url.searchParams.get("q")?.trim() || "";
const specialtyFilter = Astro.url.searchParams.get("specialty")?.trim() || "";
const countryFilter = Astro.url.searchParams.get("country")?.trim() || "";

const allDoctors = await getCollection("doctors");

// Enhanced search logic with better matching
let results: typeof allDoctors = [];
let searchTime = 0;

if (query.length >= 2) {
    const startTime = performance.now();
    const q = query.toLowerCase();
    const specialtyQ = specialtyFilter.toLowerCase();
    const countryQ = countryFilter.toLowerCase();

    results = allDoctors
        .map((d) => {
            const data = d.data;
            const fullNameLower = data.fullName.toLowerCase();
            const specialtyLower = (data.specialty || "").toLowerCase();
            const countryLower = (data.geography?.country || "").toLowerCase();
            const cityLower = (data.geography?.city || "").toLowerCase();

            // Calculate relevance score
            let score = 0;

            // Name matching
            if (fullNameLower === q) score += 100;
            else if (fullNameLower.startsWith(q)) score += 80;
            else if (fullNameLower.includes(q)) score += 50;

            // First/last name matching
            const nameParts = fullNameLower.split(' ');
            if (nameParts.some(part => part === q)) score += 70;
            else if (nameParts.some(part => part.startsWith(q))) score += 40;

            // Specialty matching
            if (specialtyLower.includes(q)) score += 30;

            // Location matching
            if (countryLower.includes(q) || cityLower.includes(q)) score += 20;

            // Apply filters
            if (specialtyQ && !specialtyLower.includes(specialtyQ)) return null;
            if (countryQ && !countryLower.includes(countryQ)) return null;

            // Tier bonus
            const tierBonus: Record<string, number> = { TITAN: 15, ELITE: 10, MASTER: 5, UNRANKED: 0 };
            score += tierBonus[data.tier] || 0;

            // H-index bonus (up to 10 points)
            score += Math.min((data.hIndex || 0) / 10, 10);

            return score > 0 ? { doctor: d, score } : null;
        })
        .filter((item): item is { doctor: typeof allDoctors[0]; score: number } => item !== null)
        .sort((a, b) => b.score - a.score)
        .slice(0, 50)
        .map(item => item.doctor);

    searchTime = Math.round(performance.now() - startTime);
}

// Get unique specialties and countries for filter suggestions
const specialties = [...new Set(allDoctors.map(d => d.data.specialty).filter(Boolean))].sort();
const countries = [...new Set(allDoctors.map(d => d.data.geography?.country).filter(Boolean))].sort();

// Count by tier for stats
const tierCounts = results.reduce((acc, d) => {
    acc[d.data.tier] = (acc[d.data.tier] || 0) + 1;
    return acc;
}, {} as Record<string, number>);
---

<Layout title={query ? `Search: ${query} ‚Äî MDRPedia` : "Search ‚Äî MDRPedia"}>
    <section class="search-page">
        <div class="container">
            <!-- Search Header -->
            <div class="search-header">
                <h1 class="search-title">
                    <span class="search-title-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.3-4.3"></path>
                        </svg>
                    </span>
                    Search Doctors
                </h1>
                <p class="search-subtitle">
                    Find verified medical professionals from our database of {allDoctors.length.toLocaleString()}+ profiles
                </p>
            </div>

            <!-- Enhanced Search Component (client-side) -->
            <div class="search-wrapper">
                <EnhancedSearch
                    client:load
                    initialQuery={query}
                    autoFocus={!query}
                    showFilters={true}
                />
            </div>

            <!-- Active Filters -->
            {(specialtyFilter || countryFilter) && (
                <div class="active-filters">
                    <span class="filters-label">Active filters:</span>
                    {specialtyFilter && (
                        <a href={`/search?q=${encodeURIComponent(query)}${countryFilter ? `&country=${encodeURIComponent(countryFilter)}` : ''}`} class="filter-chip">
                            <span>Specialty: {specialtyFilter}</span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M18 6L6 18M6 6l12 12"/>
                            </svg>
                        </a>
                    )}
                    {countryFilter && (
                        <a href={`/search?q=${encodeURIComponent(query)}${specialtyFilter ? `&specialty=${encodeURIComponent(specialtyFilter)}` : ''}`} class="filter-chip">
                            <span>Country: {countryFilter}</span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M18 6L6 18M6 6l12 12"/>
                            </svg>
                        </a>
                    )}
                    <a href={`/search?q=${encodeURIComponent(query)}`} class="clear-all">Clear all</a>
                </div>
            )}

            <!-- Results Section -->
            {query.length >= 2 ? (
                <div class="results-section">
                    <!-- Results Header -->
                    <div class="results-header">
                        <div class="results-meta">
                            <p class="results-count">
                                {results.length === 0
                                    ? `No results found for "${query}"`
                                    : `Found ${results.length} result${results.length === 1 ? "" : "s"} for "${query}"`
                                }
                            </p>
                            {searchTime > 0 && (
                                <span class="search-time">({searchTime}ms)</span>
                            )}
                        </div>

                        {/* Tier breakdown */}
                        {results.length > 0 && (
                            <div class="tier-breakdown">
                                {tierCounts['TITAN'] > 0 && (
                                    <span class="tier-count tier-count--titan">
                                        <span class="tier-dot"></span>
                                        {tierCounts['TITAN']} Titan{tierCounts['TITAN'] > 1 ? 's' : ''}
                                    </span>
                                )}
                                {tierCounts['ELITE'] > 0 && (
                                    <span class="tier-count tier-count--elite">
                                        <span class="tier-dot"></span>
                                        {tierCounts['ELITE']} Elite
                                    </span>
                                )}
                                {tierCounts['MASTER'] > 0 && (
                                    <span class="tier-count tier-count--master">
                                        <span class="tier-dot"></span>
                                        {tierCounts['MASTER']} Master{tierCounts['MASTER'] > 1 ? 's' : ''}
                                    </span>
                                )}
                            </div>
                        )}
                    </div>

                    {results.length > 0 && (
                        <div class="results-grid">
                            {results.map((doctor, index) => {
                                const d = doctor.data;
                                const location = [d.geography?.city, d.geography?.country]
                                    .filter(Boolean)
                                    .join(", ");
                                const initials = d.fullName
                                    .split(" ")
                                    .map((w: string) => w[0])
                                    .filter((_: string, i: number) => i < 2)
                                    .join("")
                                    .toUpperCase();
                                const hasImage = d.portraitUrl && !d.portraitUrl.startsWith("data:");
                                const totalCitations = d.citations?.reduce((sum: number, c: any) => sum + (c.totalCitationCount || 0), 0) || 0;

                                return (
                                    <a
                                        href={`/doctor/${doctor.id}`}
                                        class={`result-card result-card--${d.tier.toLowerCase()}`}
                                        style={`--animation-delay: ${index * 30}ms`}
                                    >
                                        <div class="result-rank">#{index + 1}</div>
                                        <div class={`result-avatar avatar--${d.tier.toLowerCase()}`}>
                                            {hasImage ? (
                                                <img src={d.portraitUrl} alt={d.fullName} loading="lazy" />
                                            ) : (
                                                <span class="avatar-initials">{initials}</span>
                                            )}
                                        </div>
                                        <div class="result-info">
                                            <div class="result-header">
                                                <h3 class="result-name">{d.fullName}</h3>
                                                <TierBadge tier={d.tier as "TITAN" | "ELITE" | "MASTER" | "UNRANKED"} size="sm" />
                                            </div>
                                            <p class="result-specialty">{d.specialty}</p>
                                            {location && (
                                                <p class="result-location">
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
                                                        <circle cx="12" cy="10" r="3"/>
                                                    </svg>
                                                    {location}
                                                </p>
                                            )}
                                            <div class="result-stats">
                                                <span class="stat">
                                                    <span class="stat-label">H-Index</span>
                                                    <span class="stat-value">{d.hIndex || "‚Äî"}</span>
                                                </span>
                                                <span class="stat">
                                                    <span class="stat-label">Publications</span>
                                                    <span class="stat-value">{d.citations?.length || 0}</span>
                                                </span>
                                                {totalCitations > 0 && (
                                                    <span class="stat">
                                                        <span class="stat-label">Citations</span>
                                                        <span class="stat-value">{totalCitations.toLocaleString()}</span>
                                                    </span>
                                                )}
                                            </div>
                                        </div>
                                        <div class="result-arrow">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M9 18l6-6-6-6"/>
                                            </svg>
                                        </div>
                                    </a>
                                );
                            })}
                        </div>
                    )}

                    {results.length === 0 && (
                        <div class="no-results">
                            <div class="no-results-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                    <circle cx="11" cy="11" r="8"/>
                                    <path d="m21 21-4.3-4.3"/>
                                    <path d="M8 8l6 6M14 8l-6 6"/>
                                </svg>
                            </div>
                            <h3>No doctors found</h3>
                            <p>We couldn't find any doctors matching "{query}"</p>
                            <div class="no-results-suggestions">
                                <p class="suggestions-title">Suggestions:</p>
                                <ul>
                                    <li>Check the spelling of your search term</li>
                                    <li>Try searching for a different name or specialty</li>
                                    <li>Use broader terms (e.g., "cardiology" instead of "interventional cardiology")</li>
                                </ul>
                            </div>
                            <div class="no-results-actions">
                                <a href="/global-leaders" class="btn btn--secondary">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
                                        <circle cx="9" cy="7" r="4"/>
                                        <path d="M23 21v-2a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75"/>
                                    </svg>
                                    Browse Top Doctors
                                </a>
                                <a href="/specialties" class="btn btn--primary">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                                    </svg>
                                    Browse by Specialty
                                </a>
                            </div>
                        </div>
                    )}
                </div>
            ) : query.length > 0 ? (
                <div class="min-chars-notice">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <circle cx="12" cy="12" r="10"/>
                        <path d="M12 8v4M12 16h.01"/>
                    </svg>
                    <p>Please enter at least 2 characters to search</p>
                </div>
            ) : (
                <div class="search-landing">
                    <div class="landing-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <circle cx="11" cy="11" r="8"/>
                            <path d="m21 21-4.3-4.3"/>
                        </svg>
                    </div>
                    <h3>Find Medical Experts</h3>
                    <p>Search our comprehensive database of verified medical professionals</p>

                    <!-- Popular Specialties -->
                    <div class="popular-section">
                        <h4>Popular Specialties</h4>
                        <div class="popular-tags">
                            <a href="/search?q=cardiology" class="popular-tag">‚ù§Ô∏è Cardiology</a>
                            <a href="/search?q=neurology" class="popular-tag">üß† Neurology</a>
                            <a href="/search?q=oncology" class="popular-tag">üéóÔ∏è Oncology</a>
                            <a href="/search?q=surgery" class="popular-tag">üî™ Surgery</a>
                            <a href="/search?q=pediatrics" class="popular-tag">üë∂ Pediatrics</a>
                            <a href="/search?q=orthopedics" class="popular-tag">ü¶¥ Orthopedics</a>
                        </div>
                    </div>

                    <!-- Quick Links -->
                    <div class="quick-links">
                        <a href="/global-leaders" class="quick-link">
                            <div class="quick-link-icon quick-link-icon--gold">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                </svg>
                            </div>
                            <div class="quick-link-text">
                                <span class="quick-link-title">Global Leaders</span>
                                <span class="quick-link-desc">Top-tier medical experts</span>
                            </div>
                        </a>
                        <a href="/nobel-laureates" class="quick-link">
                            <div class="quick-link-icon quick-link-icon--purple">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="8" r="6"/>
                                    <path d="M15.477 12.89L17 22l-5-3-5 3 1.523-9.11"/>
                                </svg>
                            </div>
                            <div class="quick-link-text">
                                <span class="quick-link-title">Nobel Laureates</span>
                                <span class="quick-link-desc">Prize-winning researchers</span>
                            </div>
                        </a>
                        <a href="/specialties" class="quick-link">
                            <div class="quick-link-icon quick-link-icon--blue">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                                </svg>
                            </div>
                            <div class="quick-link-text">
                                <span class="quick-link-title">By Specialty</span>
                                <span class="quick-link-desc">Browse all specialties</span>
                            </div>
                        </a>
                    </div>
                </div>
            )}
        </div>
    </section>
</Layout>

