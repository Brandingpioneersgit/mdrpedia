                            <span>{catInfo.icon}</span>
                        </div>
                        <div class="hero-label">{catInfo.label}</div>
                    </div>
                    <div class="hero-pattern"></div>
                    <div class="hero-shimmer"></div>
                </div>

                <!-- Article Content -->
