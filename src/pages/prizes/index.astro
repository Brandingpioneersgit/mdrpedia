/**
 * MDRPedia ‚Äî Awards & Honors Directory
 * Comprehensive catalog of medical awards organized by prestige tier
 */
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { HonorTier, GLOBAL_HONORS_DB } from "../../lib/global-honors";

// Get prizes from content collection
const prizes = await getCollection("prizes");

// Get all doctors to count recipients
const doctors = await getCollection("doctors");

// Count recipients for each prize
function countRecipients(prizeName: string): number {
    const normalizedPrize = prizeName.toLowerCase();
    return doctors.filter(d =>
        d.data.awards?.some(a => {
            const awardName = (a as any).name || a;
            return awardName?.toLowerCase().includes(normalizedPrize);
        })
    ).length;
}

// Organize prizes by tier
interface PrizeWithMeta {
    id: string;
    name: string;
    description: string;
    category: string;
    image?: string;
    tier: HonorTier;
    tierLabel: string;
    recipientCount: number;
    color: string;
}

const TIER_CONFIG = {
    [HonorTier.GLOBAL_LANDMARK]: {
        label: 'Global Landmark',
        color: '#ffd700',
        bgGradient: 'from-amber-500/10 to-yellow-500/5',
        borderColor: 'border-amber-500/30'
    },
    [HonorTier.NATIONAL_HONOR]: {
        label: 'National Honor',
        color: '#c0c0c0',
        bgGradient: 'from-slate-400/10 to-gray-500/5',
        borderColor: 'border-slate-400/30'
    },
    [HonorTier.PROFESSIONAL_EXCELLENCE]: {
        label: 'Professional Excellence',
        color: '#cd7f32',
        bgGradient: 'from-orange-600/10 to-amber-700/5',
        borderColor: 'border-orange-600/30'
    },
    [HonorTier.UNCLASSIFIED]: {
        label: 'Other Awards',
        color: '#888',
        bgGradient: 'from-gray-500/10 to-gray-600/5',
        borderColor: 'border-gray-500/30'
    },
};

// Map content prizes to display format with tier info
const prizeList: PrizeWithMeta[] = prizes.map(p => {
    // Find matching honor in database
    const normalizedName = p.data.name.toLowerCase();
    const matchedHonor = GLOBAL_HONORS_DB.find(h =>
        normalizedName.includes(h.name.toLowerCase()) ||
        h.name.toLowerCase().includes(normalizedName)
    );

    const tier = matchedHonor?.tier || HonorTier.UNCLASSIFIED;
    const config = TIER_CONFIG[tier];

    return {
        id: p.id,
        name: p.data.name,
        description: p.data.description,
        category: p.data.category,
        image: p.data.image,
        tier,
        tierLabel: config.label,
        recipientCount: countRecipients(p.data.name),
        color: config.color,
    };
});

// Group by tier
const groupedPrizes = {
    [HonorTier.GLOBAL_LANDMARK]: prizeList.filter(p => p.tier === HonorTier.GLOBAL_LANDMARK),
    [HonorTier.NATIONAL_HONOR]: prizeList.filter(p => p.tier === HonorTier.NATIONAL_HONOR),
    [HonorTier.PROFESSIONAL_EXCELLENCE]: prizeList.filter(p => p.tier === HonorTier.PROFESSIONAL_EXCELLENCE),
    [HonorTier.UNCLASSIFIED]: prizeList.filter(p => p.tier === HonorTier.UNCLASSIFIED),
};

// Stats
const totalPrizes = prizes.length;
const totalRecipients = prizeList.reduce((sum, p) => sum + p.recipientCount, 0);
