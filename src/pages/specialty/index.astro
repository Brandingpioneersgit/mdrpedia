---
/**
 * MDRPedia — Medical Specialties Index
 * Browse all medical specialty groups with doctor counts
 * Optimized for SEO with structured data
 */
import Layout from "../../layouts/Layout.astro";
import { prisma } from "../../lib/prisma";
import { SPECIALTY_GROUPS, type SpecialtyGroup } from "../../lib/specialty-groups";

export const prerender = false;

// Slugify function: convert group name to URL-friendly slug
function slugify(name: string): string {
    return name.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '');
}

// Fetch doctor counts for each specialty group
interface GroupWithCount extends SpecialtyGroup {
    doctorCount: number;
    slug: string;
}

const groupsWithCounts: GroupWithCount[] = await Promise.all(
    SPECIALTY_GROUPS.map(async (group) => {
        // Build OR conditions for each specialty in the group
        const specialtyConditions = group.specialties.map(specialty => ({
            specialty: {
                contains: specialty,
                mode: 'insensitive' as const
            }
        }));

        // Count doctors matching any of the group's specialties
        const doctorCount = await prisma.profile.count({
            where: {
                OR: specialtyConditions
            }
        });

        return {
            ...group,
            doctorCount,
            slug: slugify(group.name)
        };
    })
);

// Sort by doctor count (most doctors first)
const sortedGroups = groupsWithCounts.sort((a, b) => b.doctorCount - a.doctorCount);

// Calculate totals
const totalDoctors = sortedGroups.reduce((sum, g) => sum + g.doctorCount, 0);
const totalSpecialties = sortedGroups.reduce((sum, g) => sum + g.specialties.length, 0);

// Page metadata
const pageTitle = "Medical Specialties — MDRPedia";
const pageDescription = `Explore ${sortedGroups.length} medical specialty categories covering ${totalSpecialties}+ subspecialties. Find the world's leading physicians across surgery, cardiology, oncology, neuroscience, and more.`;
const canonicalUrl = new URL('/specialty', Astro.site ?? 'https://mdrpedia.com').href;

// Structured Data: CollectionPage with ItemList
const structuredData = {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Medical Specialties Directory",
    "description": pageDescription,
    "url": canonicalUrl,
    "publisher": {
        "@type": "Organization",
        "name": "MDRPedia",
        "url": Astro.site ?? "https://mdrpedia.com"
    },
    "mainEntity": {
        "@type": "ItemList",
        "name": "Medical Specialty Categories",
        "numberOfItems": sortedGroups.length,
        "itemListElement": sortedGroups.map((group, index) => ({
            "@type": "ListItem",
            "position": index + 1,
            "item": {
                "@type": "MedicalSpecialty",
                "name": group.name,
                "description": group.description,
                "url": new URL(`/specialty/${group.slug}`, Astro.site ?? 'https://mdrpedia.com').href
            }
        }))
    },
    "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@type": "ListItem",
                "position": 1,
                "name": "Home",
                "item": Astro.site ?? "https://mdrpedia.com"
            },
            {
                "@type": "ListItem",
                "position": 2,
                "name": "Specialties",
                "item": canonicalUrl
            }
        ]
    }
};
---

<Layout title={pageTitle} description={pageDescription}>
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <div class="specialties-page">
        <!-- Hero Section -->
        <header class="specialties-hero">
            <div class="container">
                <!-- Breadcrumbs -->
                <nav class="breadcrumb" aria-label="Breadcrumb">
                    <a href="/">Home</a>
                    <span class="breadcrumb-sep">/</span>
                    <span class="breadcrumb-current">Specialties</span>
                </nav>

                <div class="hero-content">
                    <h1>Medical Specialties</h1>
                    <p class="hero-description">
                        Explore the world's leading physicians across {sortedGroups.length} specialty categories.
                        From groundbreaking surgeons to pioneering researchers, discover verified profiles
                        of medical professionals shaping the future of healthcare.
                    </p>
                </div>

                <!-- Stats Summary -->
                <div class="hero-stats">
                    <div class="hero-stat">
                        <span class="hero-stat__value">{sortedGroups.length}</span>
                        <span class="hero-stat__label">Specialty Groups</span>
                    </div>
                    <div class="hero-stat">
                        <span class="hero-stat__value">{totalSpecialties}+</span>
                        <span class="hero-stat__label">Subspecialties</span>
                    </div>
                    <div class="hero-stat">
                        <span class="hero-stat__value">{totalDoctors.toLocaleString()}</span>
                        <span class="hero-stat__label">Verified Physicians</span>
                    </div>
                </div>
            </div>
        </header>

        <!-- Specialty Cards Grid -->
        <section class="specialties-grid-section">
            <div class="container">
                <div class="section-header">
                    <h2>Browse by Specialty</h2>
                    <p class="section-subtitle">Select a specialty to explore top physicians in that field</p>
                </div>

                <div class="specialties-grid">
                    {sortedGroups.map((group, index) => (
                        <a
                            href={`/specialty/${group.slug}`}
                            class="specialty-card"
                            style={`animation-delay: ${index * 50}ms`}
                        >
                            <div class="specialty-card__icon">
                                <span>{group.icon}</span>
                            </div>
                            <div class="specialty-card__content">
                                <h3 class="specialty-card__name">{group.name}</h3>
                                <p class="specialty-card__description">{group.description}</p>
                                <div class="specialty-card__footer">
                                    <span class="specialty-card__count">
                                        <strong>{group.doctorCount.toLocaleString()}</strong> physicians
                                    </span>
                                    <span class="specialty-card__arrow">&#8594;</span>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="container">
                <div class="cta-content">
                    <h2>Are you a medical professional?</h2>
                    <p>Claim your verified profile and join the world's most comprehensive physician directory.</p>
                    <div class="cta-buttons">
                        <a href="/doctor/claim" class="btn btn--primary">Claim Your Profile</a>
                        <a href="/doctor/add-profile" class="btn btn--secondary">Add New Profile</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</Layout>

<style>
    .specialties-page {
        background: var(--bg-primary);
        min-height: 100vh;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* Breadcrumb */
    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        margin-bottom: 2rem;
    }

    .breadcrumb a {
        color: var(--text-muted);
        text-decoration: none;
        transition: color 0.2s;
    }

    .breadcrumb a:hover {
        color: var(--accent-purple);
    }

    .breadcrumb-sep {
        color: var(--text-muted);
        opacity: 0.5;
    }

    .breadcrumb-current {
        color: var(--text-secondary);
    }

    /* Hero Section */
    .specialties-hero {
        padding: 4rem 0 3rem;
        background: linear-gradient(180deg, rgba(139, 92, 246, 0.08) 0%, rgba(139, 92, 246, 0.02) 50%, transparent 100%);
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
        position: relative;
        overflow: hidden;
    }

    .specialties-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 800px;
        height: 400px;
        background: radial-gradient(ellipse, rgba(139, 92, 246, 0.15) 0%, transparent 70%);
        pointer-events: none;
    }

    .hero-content {
        text-align: center;
        position: relative;
        z-index: 1;
        margin-bottom: 2.5rem;
    }

    .specialties-hero h1 {
        font-family: var(--font-serif);
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        background: linear-gradient(135deg, var(--accent-purple) 0%, var(--accent-purple-light) 40%, #fff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1.25rem;
        letter-spacing: -0.02em;
    }

    .hero-description {
        font-size: 1.15rem;
        color: var(--text-secondary);
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.7;
    }

    /* Hero Stats */
    .hero-stats {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
        position: relative;
        z-index: 1;
    }

    .hero-stat {
        text-align: center;
        padding: 1.25rem 2rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        min-width: 150px;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .hero-stat__value {
        display: block;
        font-family: var(--font-mono);
        font-size: 2rem;
        font-weight: 700;
        color: var(--accent-purple-light);
        letter-spacing: -0.02em;
    }

    .hero-stat__label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--text-muted);
        margin-top: 0.25rem;
    }

    /* Grid Section */
    .specialties-grid-section {
        padding: 4rem 0;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-header h2 {
        font-family: var(--font-serif);
        font-size: 1.75rem;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .section-subtitle {
        font-size: 1rem;
        color: var(--text-muted);
    }

    .specialties-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
        gap: 1.5rem;
    }

    /* Specialty Card */
    .specialty-card {
        display: flex;
        gap: 1.25rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        text-decoration: none;
        color: inherit;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        position: relative;
        overflow: hidden;
        animation: fadeInCard 0.5s ease-out forwards;
        opacity: 0;
    }

    @keyframes fadeInCard {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .specialty-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at top left, rgba(139, 92, 246, 0.05), transparent 60%);
        pointer-events: none;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .specialty-card:hover {
        background: rgba(255, 255, 255, 0.04);
        border-color: rgba(139, 92, 246, 0.3);
        transform: translateY(-4px);
        box-shadow:
            0 16px 32px rgba(0, 0, 0, 0.3),
            0 0 40px rgba(139, 92, 246, 0.08);
    }

    .specialty-card:hover::before {
        opacity: 1;
    }

    .specialty-card__icon {
        flex-shrink: 0;
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(139, 92, 246, 0.1);
        border: 1px solid rgba(139, 92, 246, 0.2);
        border-radius: 14px;
        font-size: 2rem;
        transition: all 0.3s;
    }

    .specialty-card:hover .specialty-card__icon {
        background: rgba(139, 92, 246, 0.15);
        border-color: rgba(139, 92, 246, 0.4);
        transform: scale(1.05);
    }

    .specialty-card__content {
        flex: 1;
        min-width: 0;
        display: flex;
        flex-direction: column;
    }

    .specialty-card__name {
        font-family: var(--font-serif);
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        transition: color 0.2s;
    }

    .specialty-card:hover .specialty-card__name {
        color: var(--accent-purple-light);
    }

    .specialty-card__description {
        font-size: 0.875rem;
        color: var(--text-muted);
        line-height: 1.5;
        margin-bottom: 1rem;
        flex: 1;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .specialty-card__footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 0.75rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .specialty-card__count {
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    .specialty-card__count strong {
        color: var(--accent-purple-light);
        font-family: var(--font-mono);
        font-weight: 600;
    }

    .specialty-card__arrow {
        font-size: 1.25rem;
        color: var(--text-muted);
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.3s;
    }

    .specialty-card:hover .specialty-card__arrow {
        opacity: 1;
        transform: translateX(0);
        color: var(--accent-purple);
    }

    /* CTA Section */
    .cta-section {
        padding: 4rem 0;
        background: linear-gradient(180deg, transparent 0%, rgba(139, 92, 246, 0.05) 100%);
        border-top: 1px solid rgba(255, 255, 255, 0.06);
    }

    .cta-content {
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
    }

    .cta-content h2 {
        font-family: var(--font-serif);
        font-size: 1.75rem;
        color: var(--text-primary);
        margin-bottom: 0.75rem;
    }

    .cta-content p {
        font-size: 1rem;
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 1.75rem;
        font-family: var(--font-sans);
        font-size: 0.95rem;
        font-weight: 600;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.2s;
        cursor: pointer;
    }

    .btn--primary {
        background: var(--accent-purple);
        color: white;
        border: none;
    }

    .btn--primary:hover {
        background: #7c3aed;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(139, 92, 246, 0.3);
    }

    .btn--secondary {
        background: transparent;
        color: var(--text-secondary);
        border: 1px solid rgba(255, 255, 255, 0.15);
    }

    .btn--secondary:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.25);
        color: var(--text-primary);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .specialties-hero {
            padding: 3rem 0 2rem;
        }

        .specialties-hero h1 {
            font-size: 2rem;
        }

        .hero-description {
            font-size: 1rem;
        }

        .hero-stats {
            gap: 1rem;
        }

        .hero-stat {
            padding: 1rem 1.25rem;
            min-width: 120px;
        }

        .hero-stat__value {
            font-size: 1.5rem;
        }

        .specialties-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .specialty-card {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .specialty-card__icon {
            width: 56px;
            height: 56px;
            font-size: 1.75rem;
        }

        .cta-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        .hero-stats {
            flex-direction: column;
            align-items: center;
        }

        .hero-stat {
            width: 100%;
            max-width: 280px;
        }
    }
</style>
