                </a>
                <a href={`/admin/institutions?key=${adminKey}`} class="nav-link active">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0H5m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    Institutions
                </a>
                <a href={`/admin/edits?key=${adminKey}`} class="nav-link">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                    </svg>
                    Pending Edits
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="admin-main">
            <header class="page-header">
                <div class="header-info">
                    <h1>Institutions Management</h1>
                    <p>Manage hospitals and medical centers</p>
                </div>
                <div class="header-actions">
                    <button id="syncInstitutionsBtn" class="btn btn--outline">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
                            <path d="M23 4v6h-6M1 20v-6h6"></path>
                            <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
                        </svg>
                        Sync to Database
                    </button>
                    <button id="addInstitutionBtn" class="btn btn--primary">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        Add Institution
                    </button>
                </div>
            </header>

            <!-- Stats Cards -->
            <div class="stats-cards">
                <div class="stat-card">
                    <span class="stat-value">{stats.total}</span>
                    <span class="stat-label">From Affiliations</span>
                </div>
                <div class="stat-card stat-info">
                    <span class="stat-value">{stats.inDatabase}</span>
                    <span class="stat-label">In Database</span>
                </div>
                <div class="stat-card stat-success">
                    <span class="stat-value">{stats.withTitans}</span>
                    <span class="stat-label">With TITANs</span>
                </div>
                <div class="stat-card">
                    <span class="stat-value">{stats.countries}</span>
                    <span class="stat-label">Countries</span>
                </div>
            </div>

            <!-- Tabs -->
            <div class="tabs">
                <button class="tab-btn active" data-tab="aggregated">From Affiliations</button>
                <button class="tab-btn" data-tab="database">Database Records</button>
            </div>

            <!-- Aggregated Institutions Tab -->
            <div class="tab-content active" id="aggregated-tab">
                <div class="filter-bar">
                    <div class="search-box">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="M21 21l-4.35-4.35"></path>
                        </svg>
                        <input type="text" id="searchInstitutions" placeholder="Search institutions..." />
                    </div>
                    <select id="countryFilter">
                        <option value="">All Countries</option>
                        {allCountries.map(c => <option value={c}>{c}</option>)}
                    </select>
                </div>

                <div class="table-wrapper">
                    <table class="data-table" id="institutionsTable">
                        <thead>
                            <tr>
                                <th>Institution</th>
                                <th>Doctors</th>
                                <th>TITANs</th>
                                <th>ELITEs</th>
                                <th>Countries</th>
                                <th>Specialties</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {institutions.map(inst => (
                                <tr data-name={inst.name.toLowerCase()} data-countries={[...inst.countries].join(',').toLowerCase()}>
                                    <td class="cell-institution">
                                        <div class="institution-name">{inst.name}</div>
                                        <div class="institution-slug">{inst.slug}</div>
                                    </td>
                                    <td class="cell-mono">{inst.doctorCount}</td>
                                    <td>
                                        {inst.titanCount > 0 ? (
                                            <span class="count-badge count-titan">{inst.titanCount}</span>
                                        ) : (
                                            <span class="count-muted">0</span>
                                        )}
                                    </td>
                                    <td>
                                        {inst.eliteCount > 0 ? (
                                            <span class="count-badge count-elite">{inst.eliteCount}</span>
                                        ) : (
                                            <span class="count-muted">0</span>
                                        )}
                                    </td>
                                    <td>
                                        <div class="country-tags">
                                            {[...inst.countries].slice(0, 2).map(c => (
                                                <span class="country-tag">{c}</span>
                                            ))}
                                            {inst.countries.size > 2 && (
                                                <span class="country-tag more">+{inst.countries.size - 2}</span>
                                            )}
                                        </div>
                                    </td>
                                    <td class="cell-mono">{inst.specialties.size}</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href={`/hospitals#${inst.slug}`} target="_blank" class="btn-icon" title="View">
                                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                                    <circle cx="12" cy="12" r="3"></circle>
                                                </svg>
                                            </a>
                                            <button class="btn-icon edit-institution" data-name={inst.name} data-slug={inst.slug} title="Edit">
                                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                                </svg>
                                            </button>
                                            <button class="btn-icon add-to-db" data-name={inst.name} data-slug={inst.slug} title="Add to Database">
                                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                                                    <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                                                    <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            ))}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Database Records Tab -->
            <div class="tab-content" id="database-tab">
                {dbHospitals.length > 0 ? (
                    <div class="table-wrapper">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Institution</th>
                                    <th>Sector</th>
                                    <th>Location</th>
                                    <th>Affiliations</th>
                                    <th>Website</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {dbHospitals.map(hospital => (
                                    <tr>
                                        <td class="cell-institution">
                                            <div class="institution-name">{hospital.name}</div>
                                            <div class="institution-slug">{hospital.slug}</div>
                                        </td>
                                        <td>
                                            <span class={`sector-badge sector-${hospital.sector.toLowerCase()}`}>
                                                {hospital.sector}
                                            </span>
                                        </td>
                                        <td>
                                            {hospital.geography ? (
                                                <span>{hospital.geography.city}, {hospital.geography.country}</span>
                                            ) : (
                                                <span class="text-muted">—</span>
                                            )}
                                        </td>
                                        <td class="cell-mono">{hospital._count.affiliations}</td>
                                        <td>
                                            {hospital.website ? (
                                                <a href={hospital.website} target="_blank" class="link-external">
                                                    Visit
                                                </a>
                                            ) : (
                                                <span class="text-muted">—</span>
                                            )}
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <button class="btn-icon edit-db-institution" data-id={hospital.id} title="Edit">
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                                    </svg>
                                                </button>
                                                <button class="btn-icon btn-icon--danger delete-institution" data-id={hospital.id} title="Delete">
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <polyline points="3 6 5 6 21 6"></polyline>
                                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                ) : (
                    <div class="empty-state">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                            <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                            <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
                        </svg>
                        <h3>No institutions in database</h3>
                        <p>Sync institutions from affiliations or add them manually.</p>
                        <button id="syncEmptyBtn" class="btn btn--primary">Sync Now</button>
                    </div>
                )}
            </div>
        </main>
    </div>

    <!-- Add/Edit Institution Modal -->
    <div class="modal" id="institutionModal" hidden>
        <div class="modal-backdrop"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Add Institution</h3>
                <button class="modal-close">&times;</button>
            </div>
            <div class="modal-body">
                <form id="institutionForm">
                    <input type="hidden" name="id" id="institutionId" />

                    <div class="form-group">
                        <label for="institutionName">Name *</label>
                        <input type="text" id="institutionName" name="name" required placeholder="Institution name" />
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="institutionSector">Sector</label>
                            <select id="institutionSector" name="sector">
                                <option value="PUBLIC">Public</option>
                                <option value="PRIVATE">Private</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="institutionRanking">Ranking Position</label>
                            <input type="number" id="institutionRanking" name="ranking_position" placeholder="e.g., 1" />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="institutionCountry">Country *</label>
                            <input type="text" id="institutionCountry" name="country" required placeholder="Country" />
                        </div>
                        <div class="form-group">
                            <label for="institutionCity">City</label>
                            <input type="text" id="institutionCity" name="city" placeholder="City" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="institutionWebsite">Website</label>
                        <input type="url" id="institutionWebsite" name="website" placeholder="https://..." />
                    </div>

                    <div class="form-group">
                        <label for="institutionDescription">Description</label>
                        <textarea id="institutionDescription" name="description" rows="3" placeholder="Brief description..."></textarea>
                    </div>

                    <div class="form-group">
                        <label for="institutionExcellence">Center of Excellence</label>
                        <input type="text" id="institutionExcellence" name="center_of_excellence" placeholder="e.g., Cardiology, Oncology" />
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn btn--outline" onclick="document.getElementById('institutionModal').hidden = true">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn--primary">
                            Save Institution
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</Layout>

<script define:vars={{ adminKey }}>
    const modal = document.getElementById('institutionModal');
    const form = document.getElementById('institutionForm');

    // Tab switching
    document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            btn.classList.add('active');
            document.getElementById(`${btn.dataset.tab}-tab`)?.classList.add('active');
        });
    });

    // Add institution modal
    document.getElementById('addInstitutionBtn')?.addEventListener('click', () => {
        document.getElementById('modalTitle').textContent = 'Add Institution';
        form.reset();
        document.getElementById('institutionId').value = '';
        modal.hidden = false;
    });

    // Close modal
    modal?.querySelector('.modal-backdrop')?.addEventListener('click', () => {
        modal.hidden = true;
    });

    modal?.querySelector('.modal-close')?.addEventListener('click', () => {
        modal.hidden = true;
    });

    // Edit institution
    document.querySelectorAll('.edit-institution').forEach(btn => {
        btn.addEventListener('click', () => {
            document.getElementById('modalTitle').textContent = 'Edit Institution';
            document.getElementById('institutionName').value = btn.dataset.name;
            modal.hidden = false;
        });
    });

    // Add to database
    document.querySelectorAll('.add-to-db').forEach(btn => {
        btn.addEventListener('click', async () => {
            const name = btn.dataset.name;
            const slug = btn.dataset.slug;

            if (!confirm(`Add "${name}" to the database?`)) return;

            try {
                const res = await fetch(`/api/admin/institutions?key=${adminKey}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, slug })
                });

                if (res.ok) {
                    alert('Institution added to database!');
                    location.reload();
                } else {
                    const err = await res.json();
                    alert(err.message || 'Failed to add institution');
                }
            } catch (err) {
                alert('Error adding institution');
            }
        });
    });

    // Submit form
    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);

        try {
            const res = await fetch(`/api/admin/institutions?key=${adminKey}`, {
                method: data.id ? 'PUT' : 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if (res.ok) {
                alert('Institution saved!');
                location.reload();
            } else {
                const err = await res.json();
                alert(err.message || 'Failed to save');
            }
        } catch (err) {
            alert('Error saving institution');
        }
    });

    // Search and filter
    const searchInput = document.getElementById('searchInstitutions');
    const countryFilter = document.getElementById('countryFilter');

    function filterInstitutions() {
        const search = searchInput?.value.toLowerCase() || '';
        const country = countryFilter?.value.toLowerCase() || '';

        document.querySelectorAll('#institutionsTable tbody tr').forEach(row => {
            const name = row.dataset.name || '';
            const countries = row.dataset.countries || '';

            let show = true;
            if (search && !name.includes(search)) show = false;
            if (country && !countries.includes(country)) show = false;

            row.style.display = show ? '' : 'none';
        });
    }

    searchInput?.addEventListener('input', filterInstitutions);
    countryFilter?.addEventListener('change', filterInstitutions);

    // Sync institutions
    document.getElementById('syncInstitutionsBtn')?.addEventListener('click', async () => {
        if (!confirm('Sync all institutions from affiliations to database?')) return;

        try {
            const res = await fetch(`/api/admin/sync-institutions?key=${adminKey}`, {
                method: 'POST'
            });

            if (res.ok) {
                const data = await res.json();
                alert(`Synced ${data.count} institutions!`);
                location.reload();
            } else {
                alert('Sync failed');
            }
        } catch (err) {
            alert('Error syncing');
        }
    });

    document.getElementById('syncEmptyBtn')?.addEventListener('click', () => {
        document.getElementById('syncInstitutionsBtn')?.click();
    });

    // Delete institution
    document.querySelectorAll('.delete-institution').forEach(btn => {
        btn.addEventListener('click', async () => {
            if (!confirm('Delete this institution?')) return;

            try {
                const res = await fetch(`/api/admin/institutions?key=${adminKey}`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id: btn.dataset.id })
                });

                if (res.ok) {
                    btn.closest('tr')?.remove();
                } else {
                    alert('Delete failed');
                }
            } catch (err) {
                alert('Error deleting');
            }
        });
    });
</script>

<style>
