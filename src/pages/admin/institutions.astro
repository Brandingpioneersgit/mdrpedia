---
/**
 * MDRPedia — Admin Institutions Management
 * Manage hospitals and medical institutions
 */
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { prisma } from "../../lib/prisma";
import { requireSuperAdmin } from "../../lib/rbac";

export const prerender = false;

if (!import.meta.env.ADMIN_ACCESS_KEY) {
    return new Response("ADMIN_ACCESS_KEY not configured", { status: 500 });
}

if (!requireSuperAdmin(Astro.request)) {
    return Astro.redirect("/login");
}

const url = new URL(Astro.request.url);
const adminKey = url.searchParams.get("key") || "";

// Fetch doctors to aggregate institution data
const doctors = await getCollection("doctors");

// Aggregate institutions from doctor affiliations
interface InstitutionData {
    name: string;
    slug: string;
    doctorCount: number;
    titanCount: number;
    eliteCount: number;
    countries: Set<string>;
    specialties: Set<string>;
}

const institutionMap = new Map<string, InstitutionData>();

doctors.forEach((doc) => {
    const d = doc.data;
    if (d.affiliations && d.affiliations.length > 0) {
        d.affiliations.forEach((aff) => {
            const name = aff.hospitalName.trim();
            const slug = name.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '');

            if (!institutionMap.has(slug)) {
                institutionMap.set(slug, {
                    name,
                    slug,
                    doctorCount: 0,
                    titanCount: 0,
                    eliteCount: 0,
                    countries: new Set(),
                    specialties: new Set(),
                });
            }

            const inst = institutionMap.get(slug)!;
            inst.doctorCount++;
            if (d.tier === 'TITAN') inst.titanCount++;
            else if (d.tier === 'ELITE') inst.eliteCount++;
            if (d.geography?.country) inst.countries.add(d.geography.country);
            if (d.specialty) inst.specialties.add(d.specialty);
        });
    }
});

const institutions = Array.from(institutionMap.values())
    .sort((a, b) => b.titanCount - a.titanCount || b.doctorCount - a.doctorCount);

// Get unique countries
const allCountries = [...new Set(institutions.flatMap(i => [...i.countries]))].sort();

// Fetch hospitals from database
let dbHospitals: any[] = [];
try {
    dbHospitals = await prisma.hospital.findMany({
        include: {
            geography: true,
            _count: {
                select: { affiliations: true }
            }
        },
        orderBy: { name: 'asc' }
    });
} catch (e) {
    // Table may not exist or be empty
}

// Stats
const stats = {
    total: institutions.length,
    inDatabase: dbHospitals.length,
    withTitans: institutions.filter(i => i.titanCount > 0).length,
    countries: allCountries.length,
};
---

<Layout title="Institutions Management — MDRPedia Admin">
    <div class="admin-page">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-brand">
                <a href={`/admin?key=${adminKey}`}>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 21h18M5 21V7l7-4 7 4v14M9 21v-6h6v6"></path>
                    </svg>
                    MDRPedia
                </a>
                <span class="admin-badge">Admin</span>
            </div>
            <nav class="sidebar-nav">
                <a href={`/admin?key=${adminKey}`} class="nav-link">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="7" height="7" rx="1"></rect>
                        <rect x="14" y="3" width="7" height="7" rx="1"></rect>
                        <rect x="3" y="14" width="7" height="7" rx="1"></rect>
                        <rect x="14" y="14" width="7" height="7" rx="1"></rect>
