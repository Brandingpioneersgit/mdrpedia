		<meta name="robots" content="index, follow" />

		<!-- Performance: Preconnect to critical third-party origins -->
		<link rel="preconnect" href="https://logo.clearbit.com" />
		<link rel="preconnect" href="https://orcid.org" />
		<link rel="preconnect" href="https://doi.org" />
		<link rel="dns-prefetch" href="https://pubmed.ncbi.nlm.nih.gov" />
		<link rel="dns-prefetch" href="https://fonts.googleapis.com" />

		<!-- Prefetch critical pages for instant navigation -->
		<link rel="prefetch" href="/doctors" />
		<link rel="prefetch" href="/rankings" />
		<link rel="prefetch" href="/clinical-trials" />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalURL.href} />
		{ogImage && <meta property="og:image" content={ogImage} />}

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		{ogImage && <meta name="twitter:image" content={ogImage} />}
		<meta name="twitter:site" content="@mdrpedia" />

		<link rel="canonical" href={canonicalURL.href} />
