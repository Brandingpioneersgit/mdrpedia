        border-color: #25d366;
        color: white;
    }

    /* Embed Tabs */
    .embed-tabs {
        display: flex;
        gap: 0.5rem;
    }

    .embed-tab {
        flex: 1;
        padding: 0.6rem 1rem;
        background: rgba(255, 255, 255, 0.03);
