---
/**
 * MDRPedia ‚Äî Profile Embed Component
 * Easy URL sharing and embed code generation for doctor profiles
 */

interface Props {
    slug: string;
    fullName: string;
    specialty: string;
    tier: string;
    hasImage: boolean;
    totalImpact?: number;
    hIndex?: number;
    livesSaved?: number;
}

const { slug, fullName, specialty, tier, hasImage, totalImpact = 0, hIndex = 0, livesSaved = 0 } = Astro.props;

const baseUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://mdrpedia.com';
const profileUrl = `${baseUrl}/doctors/${slug}`;
const tierColor = tier === 'TITAN' ? '#ffd700' : tier === 'ELITE' ? '#00aaff' : tier === 'MASTER' ? '#00cc66' : '#888';
const tierLabel = tier === 'TITAN' ? 'Top 0.01%' : tier === 'ELITE' ? 'Top 1%' : tier === 'MASTER' ? 'Top 3%' : '';

// Simple embed badge
const embedCode = `<a href="${profileUrl}" target="_blank" rel="noopener" style="display:inline-flex;align-items:center;gap:8px;padding:8px 16px;background:#1a1a2e;border:1px solid rgba(255,255,255,0.1);border-radius:8px;text-decoration:none;color:#fff;font-family:system-ui,sans-serif;font-size:14px;"><span style="color:${tierColor};">‚óè</span>${fullName} ‚Äî MDRPedia</a>`;

// Rich embed with impact metrics
const richEmbedCode = `<div style="display:inline-block;font-family:system-ui,sans-serif;background:linear-gradient(135deg,#1a1a2e,#0d0d1a);border:1px solid ${tierColor}40;border-radius:12px;padding:16px 20px;min-width:280px;text-decoration:none;"><a href="${profileUrl}" target="_blank" rel="noopener" style="text-decoration:none;"><div style="display:flex;align-items:center;gap:12px;margin-bottom:12px;"><span style="width:12px;height:12px;border-radius:50%;background:${tierColor};box-shadow:0 0 10px ${tierColor}80;"></span><span style="color:#fff;font-weight:700;font-size:16px;">${fullName}</span></div><div style="color:#888;font-size:12px;margin-bottom:12px;">${specialty}${tierLabel ? ` ¬∑ ${tierLabel}` : ''}</div>${totalImpact > 0 ? `<div style="display:flex;gap:16px;"><div style="text-align:center;"><div style="color:${tierColor};font-weight:800;font-size:20px;">${totalImpact.toLocaleString()}</div><div style="color:#666;font-size:10px;text-transform:uppercase;">Impact</div></div>${hIndex > 0 ? `<div style="text-align:center;"><div style="color:#a78bfa;font-weight:800;font-size:20px;">${hIndex}</div><div style="color:#666;font-size:10px;text-transform:uppercase;">H-Index</div></div>` : ''}${livesSaved > 0 ? `<div style="text-align:center;"><div style="color:#10b981;font-weight:800;font-size:20px;">${livesSaved.toLocaleString()}</div><div style="color:#666;font-size:10px;text-transform:uppercase;">Lives Saved</div></div>` : ''}</div>` : ''}<div style="margin-top:12px;padding-top:8px;border-top:1px solid rgba(255,255,255,0.1);font-size:10px;color:#666;">Verified on MDRPedia</div></a></div>`;
---

<div class="embed-widget">
    <button class="embed-toggle" id="embed-toggle" aria-expanded="false">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
        </svg>
        Share Profile
    </button>

    <div class="embed-panel" id="embed-panel" hidden>
        <div class="embed-header">
            <h4>Share or Embed Profile</h4>
            <button class="close-btn" id="embed-close" aria-label="Close">√ó</button>
        </div>

        <!-- Profile URL -->
        <div class="embed-section">
            <label>Profile URL</label>
            <div class="input-group">
                <input type="text" value={profileUrl} readonly id="profile-url" />
                <button class="copy-btn" data-copy="profile-url" title="Copy URL">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="9" y="9" width="13" height="13" rx="2"/>
                        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Quick Share Buttons -->
        <div class="embed-section">
            <label>Quick Share</label>
            <div class="share-buttons">
                <a
                    href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(`${fullName} ‚Äî ${specialty} | MDRPedia`)}&url=${encodeURIComponent(profileUrl)}`}
                    target="_blank"
                    rel="noopener"
                    class="share-btn twitter"
                    title="Share on X (Twitter)"
                >
                    ùïè
                </a>
                <a
                    href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(profileUrl)}`}
                    target="_blank"
                    rel="noopener"
                    class="share-btn linkedin"
                    title="Share on LinkedIn"
                >
                    in
                </a>
                <a
                    href={`mailto:?subject=${encodeURIComponent(`${fullName} ‚Äî MDRPedia`)}&body=${encodeURIComponent(`Check out ${fullName}'s profile on MDRPedia: ${profileUrl}`)}`}
                    class="share-btn email"
                    title="Share via Email"
                >
                    ‚úâ
                </a>
                <a
                    href={`https://wa.me/?text=${encodeURIComponent(`${fullName} ‚Äî ${specialty} | MDRPedia ${profileUrl}`)}`}
                    target="_blank"
                    rel="noopener"
                    class="share-btn whatsapp"
                    title="Share on WhatsApp"
                >
                    ‚óè
                </a>
            </div>
        </div>

        <!-- Embed Options -->
        <div class="embed-section">
            <label>Embed Style</label>
            <div class="embed-tabs">
                <button class="embed-tab active" data-tab="simple">Simple Badge</button>
                <button class="embed-tab" data-tab="rich">Rich Card</button>
            </div>
        </div>

        <!-- Simple Embed Code -->
        <div class="embed-section embed-content" id="embed-simple">
            <p class="embed-hint">Minimal link badge for your website</p>
            <div class="input-group">
                <textarea readonly id="embed-code" rows="2">{embedCode}</textarea>
                <button class="copy-btn" data-copy="embed-code" title="Copy Embed Code">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="9" y="9" width="13" height="13" rx="2"/>
                        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
                    </svg>
                </button>
            </div>
            <div class="embed-preview">
                <span class="preview-label">Preview:</span>
                <div class="preview-badge" style={`--tier-color: ${tierColor}`}>
                    <span class="badge-dot">‚óè</span>
                    {fullName} ‚Äî MDRPedia
                </div>
            </div>
        </div>

        <!-- Rich Embed Code with Impact Metrics -->
        <div class="embed-section embed-content" id="embed-rich" hidden>
            <p class="embed-hint">Impact card with key metrics</p>
            <div class="input-group">
                <textarea readonly id="embed-code-rich" rows="4">{richEmbedCode}</textarea>
                <button class="copy-btn" data-copy="embed-code-rich" title="Copy Rich Embed">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="9" y="9" width="13" height="13" rx="2"/>
                        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
                    </svg>
                </button>
            </div>
            <div class="embed-preview">
                <span class="preview-label">Preview:</span>
                <div class="preview-card" style={`--tier-color: ${tierColor}`}>
                    <div class="preview-card__header">
                        <span class="preview-card__dot"></span>
                        <span class="preview-card__name">{fullName}</span>
                    </div>
                    <div class="preview-card__specialty">{specialty}{tierLabel && ` ¬∑ ${tierLabel}`}</div>
                    {totalImpact > 0 && (
                        <div class="preview-card__metrics">
                            <div class="preview-metric">
                                <span class="preview-metric__value" style="color: var(--tier-color)">{totalImpact.toLocaleString()}</span>
                                <span class="preview-metric__label">Impact</span>
                            </div>
                            {hIndex > 0 && (
                                <div class="preview-metric">
                                    <span class="preview-metric__value" style="color: #a78bfa">{hIndex}</span>
                                    <span class="preview-metric__label">H-Index</span>
                                </div>
                            )}
                            {livesSaved > 0 && (
                                <div class="preview-metric">
                                    <span class="preview-metric__value" style="color: #10b981">{livesSaved.toLocaleString()}</span>
                                    <span class="preview-metric__label">Lives Saved</span>
                                </div>
                            )}
                        </div>
                    )}
                    <div class="preview-card__footer">Verified on MDRPedia</div>
                </div>
            </div>
        </div>

        <!-- Recommend Profile (when no image) -->
        {!hasImage && (
            <div class="embed-section recommend-section">
                <label>Help Improve This Profile</label>
                <p class="embed-hint">This profile doesn't have a photo. Know this physician? Help us add one.</p>
                <a href={`/suggest-edit?profile=${slug}&type=image`} class="recommend-btn">
                    Suggest a Photo
                </a>
            </div>
        )}

        <!-- Copied Toast -->
        <div class="copied-toast" id="copied-toast">Copied!</div>
    </div>
</div>

<script>
    const toggle = document.getElementById('embed-toggle');
    const panel = document.getElementById('embed-panel');
    const closeBtn = document.getElementById('embed-close');
    const copyBtns = document.querySelectorAll('.copy-btn');
    const toast = document.getElementById('copied-toast');
    const embedTabs = document.querySelectorAll('.embed-tab');
    const embedSimple = document.getElementById('embed-simple');
    const embedRich = document.getElementById('embed-rich');

    toggle?.addEventListener('click', () => {
        const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
        toggle.setAttribute('aria-expanded', (!isExpanded).toString());
        panel!.hidden = isExpanded;
    });

    closeBtn?.addEventListener('click', () => {
        toggle!.setAttribute('aria-expanded', 'false');
        panel!.hidden = true;
    });

    // Close on escape
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !panel?.hidden) {
            toggle!.setAttribute('aria-expanded', 'false');
            panel!.hidden = true;
        }
    });

    // Tab switching for embed styles
    embedTabs.forEach(tab => {
        tab.addEventListener('click', () => {
            const tabType = tab.getAttribute('data-tab');
            embedTabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            if (tabType === 'simple') {
                embedSimple!.hidden = false;
                embedRich!.hidden = true;
            } else {
                embedSimple!.hidden = true;
                embedRich!.hidden = false;
            }
        });
    });

    // Copy functionality
    copyBtns.forEach(btn => {
        btn.addEventListener('click', async () => {
            const targetId = btn.getAttribute('data-copy');
            const target = document.getElementById(targetId!) as HTMLInputElement | HTMLTextAreaElement;

            if (target) {
                try {
                    await navigator.clipboard.writeText(target.value);
                    toast!.classList.add('show');
                    setTimeout(() => toast!.classList.remove('show'), 2000);
                } catch {
                    // Fallback for older browsers
                    target.select();
                    document.execCommand('copy');
                    toast!.classList.add('show');
                    setTimeout(() => toast!.classList.remove('show'), 2000);
                }
            }
        });
    });
</script>

<style>
    .embed-widget {
        position: relative;
    }

    .embed-toggle {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.6rem 1rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--text-secondary);
        cursor: pointer;
        transition: all 0.2s;
    }

    .embed-toggle:hover {
        background: rgba(255, 255, 255, 0.1);
        color: var(--text-primary);
    }

