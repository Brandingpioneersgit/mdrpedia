---
/**
 * ClinicalScenarios - Interactive decision tree case studies
 * "What If" scenarios showing expert clinical decision-making
 */

import type { ClinicalScenarioData } from '../../lib/types';

interface Props {
    scenario: ClinicalScenarioData;
    tier?: string;
}

const { scenario, tier = "UNRANKED" } = Astro.props;

// Complexity colors
const complexityConfig: Record<ClinicalScenarioData['complexity'], { label: string; color: string }> = {
    BASIC: { label: 'Basic', color: '#10b981' },
    INTERMEDIATE: { label: 'Intermediate', color: '#3b82f6' },
    ADVANCED: { label: 'Advanced', color: '#f59e0b' },
    EXPERT: { label: 'Expert', color: '#ef4444' },
};

const complexityInfo = complexityConfig[scenario.complexity];
---

<section class={`scenario-section tier-${tier.toLowerCase()}`}>
    <div class="scenario-header">
        <div class="header-content">
            <h2 class="scenario-title">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                    <path d="M12 11l4 4m0-4l-4 4"/>
                </svg>
                {scenario.title}
            </h2>
            <div class="header-meta">
                <span class="complexity-badge" style={`--badge-color: ${complexityInfo.color};`}>
                    {complexityInfo.label}
                </span>
                <span class="condition-tag">{scenario.relevantCondition}</span>
            </div>
        </div>
    </div>

    <!-- Patient Presentation -->
    <div class="presentation-card">
        <h3 class="card-subtitle">
            <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
                <circle cx="8.5" cy="7" r="4"/>
                <path d="M20 8v6M23 11h-6"/>
            </svg>
            Patient Presentation
        </h3>
        <p class="presentation-text">{scenario.patientPresentation}</p>
    </div>

    <!-- Decision Steps -->
    <div class="decision-tree">
        <h3 class="tree-title">
            <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <circle cx="18" cy="5" r="3"/>
                <circle cx="6" cy="12" r="3"/>
                <circle cx="18" cy="19" r="3"/>
                <path d="M8.59 13.51l6.83 3.98M15.41 6.51l-6.82 3.98"/>
            </svg>
            Clinical Decision Points
        </h3>

        <div class="steps-container">
            {scenario.steps.map((step, index) => (
                <div class="step-block" data-step={step.stepNumber}>
                    <div class="step-header">
                        <span class="step-number">{step.stepNumber}</span>
                        <span class="step-situation">{step.situation}</span>
                    </div>

                    <div class="options-grid">
                        {step.options.map((option, optIndex) => (
                            <button
                                class={`option-card ${option.isOptimal ? 'option-card--optimal' : ''}`}
                                data-step={step.stepNumber}
                                data-option={optIndex}
                            >
                                <div class="option-header">
                                    <span class="option-letter">{String.fromCharCode(65 + optIndex)}</span>
                                    {option.isOptimal && (
                                        <span class="optimal-badge">
                                            <svg width="12" height="12" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
                                                <path d="M22 4L12 14.01l-3-3"/>
                                            </svg>
                                            Optimal
                                        </span>
                                    )}
                                </div>
                                <p class="option-choice">{option.choice}</p>
                                <div class="option-reveal">
                                    <div class="outcome-section">
                                        <span class="outcome-label">Outcome:</span>
                                        <p class="outcome-text">{option.outcome}</p>
                                    </div>
                                    {option.reasoning && (
                                        <div class="reasoning-section">
                                            <span class="reasoning-label">Reasoning:</span>
                                            <p class="reasoning-text">{option.reasoning}</p>
                                        </div>
                                    )}
                                </div>
                            </button>
                        ))}
                    </div>

                    {step.expertInsight && (
                        <div class="expert-insight">
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                            </svg>
                            <span class="insight-label">Expert Insight:</span>
                            <p class="insight-text">{step.expertInsight}</p>
                        </div>
                    )}
                </div>
            ))}
        </div>
    </div>

    <!-- Expert Approach Summary -->
    <div class="expert-summary">
        <h3 class="summary-title">
            <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            Expert Approach
        </h3>
        <p class="expert-text">{scenario.expertApproach}</p>
    </div>

    <!-- Key Learnings -->
    <div class="learnings-section">
        <h3 class="learnings-title">
            <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
                <path d="M22 4L12 14.01l-3-3"/>
            </svg>
            Key Learnings
        </h3>
        <ul class="learnings-list">
            {scenario.keyLearnings.map(learning => (
                <li class="learning-item">
                    <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M5 12l5 5L20 7"/>
                    </svg>
                    {learning}
                </li>
            ))}
        </ul>
    </div>

    <!-- Related Techniques -->
    {scenario.relatedTechniques && scenario.relatedTechniques.length > 0 && (
        <div class="related-techniques">
            <span class="related-label">Related Techniques:</span>
            <div class="related-tags">
                {scenario.relatedTechniques.map(tech => (
                    <span class="technique-tag">{tech}</span>
                ))}
            </div>
        </div>
    )}

    <!-- Disclaimers -->
    {scenario.disclaimers && scenario.disclaimers.length > 0 && (
        <div class="disclaimers">
            {scenario.disclaimers.map(disclaimer => (
                <p class="disclaimer-text">
                    <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="12" y1="8" x2="12" y2="12"/>
                        <line x1="12" y1="16" x2="12.01" y2="16"/>
                    </svg>
                    {disclaimer}
                </p>
            ))}
        </div>
    )}

    <!-- Hidden semantic content for AI crawlers -->
    <div class="ai-semantic-layer" aria-hidden="true" style="display:none;">
        <h3>Clinical Scenario: {scenario.title}</h3>
        <p>Condition: {scenario.relevantCondition}</p>
        <p>Complexity: {scenario.complexity}</p>
        <p>Patient: {scenario.patientPresentation}</p>
        <h4>Decision Steps:</h4>
        {scenario.steps.map(step => (
            <div>
                <p>Step {step.stepNumber}: {step.situation}</p>
                {step.options.map(opt => (
                    <p>- {opt.choice}: {opt.outcome} {opt.isOptimal ? '(OPTIMAL)' : ''}</p>
                ))}
            </div>
        ))}
        <h4>Expert Approach:</h4>
        <p>{scenario.expertApproach}</p>
        <h4>Key Learnings:</h4>
        <ul>
            {scenario.keyLearnings.map(l => <li>{l}</li>)}
        </ul>
    </div>
</section>

<style>
    .scenario-section {
        background: var(--card-bg, rgba(20, 20, 35, 0.8));
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        backdrop-filter: blur(10px);
    }

    .scenario-header {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
    }

    .scenario-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0 0 0.75rem;
        color: var(--text-primary, #fff);
    }

    .scenario-title svg {
        color: var(--accent, #8b5cf6);
        opacity: 0.9;
    }

    .header-meta {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .complexity-badge {
        padding: 4px 12px;
        background: color-mix(in srgb, var(--badge-color) 15%, transparent);
        border: 1px solid color-mix(in srgb, var(--badge-color) 30%, transparent);
        border-radius: 100px;
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--badge-color);
        text-transform: uppercase;
        letter-spacing: 0.03em;
    }

    .condition-tag {
        padding: 4px 12px;
        background: rgba(236, 72, 153, 0.1);
        border: 1px solid rgba(236, 72, 153, 0.2);
        border-radius: 100px;
        font-size: 0.75rem;
        color: #f472b6;
    }

    /* Presentation Card */
    .presentation-card {
        background: rgba(139, 92, 246, 0.08);
        border: 1px solid rgba(139, 92, 246, 0.2);
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .card-subtitle {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        font-weight: 700;
        color: #a78bfa;
        margin: 0 0 0.75rem;
    }

    .presentation-text {
        font-size: 0.95rem;
        line-height: 1.7;
        color: var(--text-secondary, #ccc);
        margin: 0;
    }

    /* Decision Tree */
    .decision-tree {
        margin-bottom: 1.5rem;
    }

    .tree-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted, #888);
        margin: 0 0 1rem;
    }

    .steps-container {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .step-block {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 12px;
        padding: 1.25rem;
    }

    .step-header {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .step-number {
        flex-shrink: 0;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--accent, #8b5cf6);
        border-radius: 50%;
        font-size: 0.9rem;
        font-weight: 700;
        color: white;
    }

    .step-situation {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-primary, #fff);
        line-height: 1.5;
        padding-top: 0.25rem;
    }

    /* Options Grid */
    .options-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0.75rem;
    }

    .option-card {
        position: relative;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
        text-align: left;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .option-card:hover {
        background: rgba(255, 255, 255, 0.04);
        border-color: rgba(255, 255, 255, 0.15);
    }

    .option-card--optimal {
        border-color: rgba(16, 185, 129, 0.3);
    }

    .option-card.revealed.option-card--optimal {
        background: rgba(16, 185, 129, 0.08);
    }

    .option-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }

    .option-letter {
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--text-secondary, #ccc);
    }

    .optimal-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 2px 8px;
        background: rgba(16, 185, 129, 0.15);
        border-radius: 100px;
        font-size: 0.65rem;
        font-weight: 600;
        color: #10b981;
        text-transform: uppercase;
    }

    .option-choice {
        font-size: 0.9rem;
        line-height: 1.5;
        color: var(--text-secondary, #ccc);
        margin: 0;
    }

    .option-reveal {
        display: none;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
    }

    .option-card.revealed .option-reveal {
        display: block;
    }

    .outcome-section,
    .reasoning-section {
        margin-bottom: 0.75rem;
    }

    .outcome-label,
    .reasoning-label {
        display: block;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted, #888);
        margin-bottom: 0.25rem;
    }

    .outcome-text,
    .reasoning-text {
        font-size: 0.85rem;
        line-height: 1.5;
        color: var(--text-secondary, #ccc);
        margin: 0;
    }

    /* Expert Insight */
    .expert-insight {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        gap: 0.5rem;
        margin-top: 1rem;
        padding: 1rem;
        background: rgba(245, 158, 11, 0.08);
        border-radius: 10px;
    }

    .expert-insight svg {
        color: #f59e0b;
        flex-shrink: 0;
    }

    .insight-label {
        font-size: 0.75rem;
        font-weight: 600;
        color: #f59e0b;
    }

    .insight-text {
        flex: 1 1 100%;
        font-size: 0.9rem;
        line-height: 1.6;
        color: var(--text-secondary, #ccc);
        margin: 0.25rem 0 0;
    }

    /* Expert Summary */
    .expert-summary {
        background: rgba(16, 185, 129, 0.08);
        border: 1px solid rgba(16, 185, 129, 0.2);
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .summary-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        font-weight: 700;
        color: #10b981;
        margin: 0 0 0.75rem;
    }

    .expert-text {
        font-size: 0.95rem;
        line-height: 1.7;
        color: var(--text-secondary, #ccc);
        margin: 0;
    }

    /* Key Learnings */
    .learnings-section {
        margin-bottom: 1.5rem;
    }

    .learnings-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--text-muted, #888);
        margin: 0 0 1rem;
    }

    .learnings-list {
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .learning-item {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 0.6rem 0;
        font-size: 0.9rem;
        color: var(--text-secondary, #ccc);
        border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    }

    .learning-item:last-child {
        border-bottom: none;
    }

    .learning-item svg {
        flex-shrink: 0;
        color: #10b981;
        margin-top: 0.15rem;
    }

    /* Related Techniques */
    .related-techniques {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
        margin-bottom: 1rem;
    }

    .related-label {
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--text-muted, #888);
    }

    .related-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.35rem;
    }

    .technique-tag {
        padding: 4px 12px;
        background: rgba(139, 92, 246, 0.1);
        border-radius: 100px;
        font-size: 0.75rem;
        color: #a78bfa;
    }

    /* Disclaimers */
    .disclaimers {
        padding: 1rem;
        background: rgba(255, 255, 255, 0.02);
        border-radius: 10px;
        border: 1px dashed rgba(255, 255, 255, 0.1);
    }

    .disclaimer-text {
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
        font-size: 0.8rem;
        color: var(--text-muted, #888);
        margin: 0 0 0.5rem;
        line-height: 1.5;
    }

    .disclaimer-text:last-child {
        margin-bottom: 0;
    }

    .disclaimer-text svg {
        flex-shrink: 0;
        margin-top: 0.1rem;
        color: #f59e0b;
    }

    /* Tier colors */
    .tier-titan .scenario-title svg { color: #ffd700; }
    .tier-titan .step-number { background: linear-gradient(135deg, #ffd700, #f59e0b); }
    .tier-elite .scenario-title svg { color: #00aaff; }
    .tier-elite .step-number { background: linear-gradient(135deg, #00aaff, #0070f3); }
    .tier-master .scenario-title svg { color: #00cc66; }
    .tier-master .step-number { background: linear-gradient(135deg, #00cc66, #10b981); }

    /* Responsive */
    @media (max-width: 640px) {
        .scenario-section {
            padding: 1.5rem;
        }

        .options-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const optionCards = document.querySelectorAll('.option-card');

        optionCards.forEach(card => {
            card.addEventListener('click', () => {
                // Toggle reveal state
                card.classList.toggle('revealed');
            });
        });
    });
</script>
