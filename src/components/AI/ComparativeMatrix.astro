---
/**
 * ComparativeMatrix - Doctor/Technique/Institution Comparisons
 * Data tables comparing metrics across entities
 */

import type { ComparativeMatrix } from '../../lib/ai-content-types';

interface Props {
    matrix: ComparativeMatrix;
    tier?: string;
}

const { matrix, tier = 'UNRANKED' } = Astro.props;

// Type icons
const typeIcons: Record<ComparativeMatrix['comparisonType'], string> = {
    DOCTORS: 'ðŸ‘¨â€âš•ï¸',
    TECHNIQUES: 'ðŸ”§',
    INSTITUTIONS: 'ðŸ¥',
    OUTCOMES: 'ðŸ“Š',
};

// Format cell value
function formatValue(value: string | number | boolean | null, unit?: string): string {
    if (value === null || value === undefined) return 'â€”';
    if (typeof value === 'boolean') return value ? 'âœ“' : 'âœ—';
    if (typeof value === 'number') {
        const formatted = value.toLocaleString();
        return unit ? `${formatted} ${unit}` : formatted;
    }
    return String(value);
}

// Determine if value is best in column
function isBestValue(
    value: string | number | boolean | null,
    columnValues: (string | number | boolean | null)[],
    higherIsBetter?: boolean
): boolean {
    if (value === null || typeof value !== 'number') return false;
    const numericValues = columnValues.filter((v): v is number => typeof v === 'number');
    if (numericValues.length === 0) return false;

    const best = higherIsBetter
        ? Math.max(...numericValues)
        : Math.min(...numericValues);
    return value === best;
}
---

<section class={`matrix-section tier-${tier.toLowerCase()}`}>
    <div class="section-header">
        <h2 class="section-title">
            <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <line x1="3" y1="9" x2="21" y2="9"/>
                <line x1="3" y1="15" x2="21" y2="15"/>
                <line x1="9" y1="3" x2="9" y2="21"/>
                <line x1="15" y1="3" x2="15" y2="21"/>
            </svg>
            {matrix.title}
        </h2>
        <span class="type-badge">
            <span class="type-icon">{typeIcons[matrix.comparisonType]}</span>
            {matrix.comparisonType.replace('_', ' ')} Comparison
        </span>
    </div>

    <div class="table-wrapper">
        <table class="comparison-table">
            <thead>
                <tr>
                    <th class="name-column">Name</th>
                    {matrix.metrics.map(metric => (
                        <th class="metric-column">
                            <div class="metric-header">
                                <span class="metric-label">{metric.label}</span>
                                {metric.unit && (
                                    <span class="metric-unit">({metric.unit})</span>
                                )}
                                {metric.higherIsBetter !== undefined && (
                                    <span class="sort-indicator" title={metric.higherIsBetter ? 'Higher is better' : 'Lower is better'}>
                                        {metric.higherIsBetter ? 'â†‘' : 'â†“'}
                                    </span>
                                )}
                            </div>
                        </th>
                    ))}
                </tr>
            </thead>
            <tbody>
                {matrix.entries.map(entry => (
                    <tr class={entry.isSubject ? 'subject-row' : ''}>
                        <td class="name-cell">
                            {entry.slug ? (
                                <a href={`/doctor/${entry.slug}`} class="entry-name linked">
                                    {entry.name}
                                </a>
                            ) : (
                                <span class="entry-name">{entry.name}</span>
                            )}
                            {entry.isSubject && (
                                <span class="subject-badge">Profile</span>
                            )}
                        </td>
                        {matrix.metrics.map(metric => {
                            const value = entry.values[metric.key];
                            const allValues = matrix.entries.map(e => e.values[metric.key]);
                            const isBest = isBestValue(value, allValues, metric.higherIsBetter);

                            return (
                                <td class={`value-cell ${isBest ? 'best-value' : ''} ${typeof value === 'number' ? 'numeric' : ''}`}>
                                    <span class="cell-value">
                                        {formatValue(value, metric.unit)}
                                    </span>
                                    {isBest && (
                                        <span class="best-indicator" title="Best in category">â˜…</span>
                                    )}
                                </td>
                            );
                        })}
                    </tr>
                ))}
            </tbody>
        </table>
    </div>

    {(matrix.notes || matrix.dataSource || matrix.lastUpdated) && (
        <div class="table-footer">
            {matrix.notes && (
                <p class="table-notes">{matrix.notes}</p>
            )}
            <div class="table-meta">
                {matrix.dataSource && (
                    <span class="data-source">Source: {matrix.dataSource}</span>
                )}
                {matrix.lastUpdated && (
                    <span class="last-updated">Updated: {matrix.lastUpdated}</span>
                )}
            </div>
        </div>
    )}

    <!-- Hidden semantic layer for AI -->
    <div class="ai-semantic-layer" aria-hidden="true" style="display:none;">
        <h3>Comparative Analysis: {matrix.title}</h3>
        <p>Type: {matrix.comparisonType}</p>
        <table>
            <tr>
                <th>Name</th>
                {matrix.metrics.map(m => <th>{m.label}</th>)}
            </tr>
            {matrix.entries.map(e => (
                <tr>
                    <td>{e.name}{e.isSubject ? ' (Subject)' : ''}</td>
                    {matrix.metrics.map(m => <td>{formatValue(e.values[m.key], m.unit)}</td>)}
                </tr>
            ))}
        </table>
    </div>
</section>

<style>
    .matrix-section {
        background: var(--card-bg, rgba(20, 20, 35, 0.8));
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        backdrop-filter: blur(10px);
    }

    .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-primary, #fff);
    }

    .section-title svg {
        color: #3b82f6;
        opacity: 0.9;
    }

    .type-badge {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        padding: 4px 12px;
        background: rgba(59, 130, 246, 0.15);
        border-radius: 100px;
        font-size: 0.75rem;
        font-weight: 600;
        color: #60a5fa;
        text-transform: uppercase;
    }

    .type-icon {
        font-size: 0.9rem;
    }

    /* Table Wrapper */
    .table-wrapper {
        overflow-x: auto;
        margin: 0 -0.5rem;
        padding: 0 0.5rem;
    }

    .comparison-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.875rem;
    }

    .comparison-table thead {
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .comparison-table th {
        background: rgba(255, 255, 255, 0.03);
        padding: 1rem 0.75rem;
        text-align: left;
        font-weight: 600;
        color: var(--text-primary, #fff);
        border-bottom: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
    }

    .comparison-table td {
        padding: 0.875rem 0.75rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.03);
        color: var(--text-secondary, #ccc);
    }

    .comparison-table tbody tr:hover {
        background: rgba(255, 255, 255, 0.02);
    }

    .comparison-table tbody tr.subject-row {
        background: rgba(59, 130, 246, 0.05);
    }

    .comparison-table tbody tr.subject-row:hover {
        background: rgba(59, 130, 246, 0.08);
    }

    /* Name Column */
    .name-column {
        min-width: 180px;
    }

    .name-cell {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .entry-name {
        font-weight: 600;
        color: var(--text-primary, #fff);
    }

    .entry-name.linked {
        color: #60a5fa;
        text-decoration: none;
    }

    .entry-name.linked:hover {
        text-decoration: underline;
    }

    .subject-badge {
        padding: 2px 6px;
        background: rgba(59, 130, 246, 0.2);
        border-radius: 4px;
        font-size: 0.6rem;
        font-weight: 600;
        color: #60a5fa;
        text-transform: uppercase;
    }

    /* Metric Header */
    .metric-header {
        display: flex;
        align-items: center;
        gap: 0.35rem;
    }

    .metric-label {
        white-space: nowrap;
    }

    .metric-unit {
        font-size: 0.7rem;
        font-weight: 400;
        color: var(--text-muted, #888);
    }

    .sort-indicator {
        font-size: 0.75rem;
        color: var(--text-muted, #888);
        cursor: help;
    }

    /* Value Cells */
    .value-cell {
        position: relative;
        white-space: nowrap;
    }

    .value-cell.numeric {
        text-align: right;
        font-family: monospace;
    }

    .value-cell.best-value {
        color: #10b981;
        font-weight: 600;
    }

    .cell-value {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    .best-indicator {
        color: #ffd700;
        font-size: 0.75rem;
    }

    /* Table Footer */
    .table-footer {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.04);
    }

    .table-notes {
        font-size: 0.8rem;
        color: var(--text-muted, #888);
        line-height: 1.5;
        margin: 0 0 0.5rem;
    }

    .table-meta {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .data-source,
    .last-updated {
        font-size: 0.7rem;
        color: var(--text-muted, #888);
    }

    /* Tier colors */
    .tier-titan .section-title svg { color: #ffd700; }
    .tier-elite .section-title svg { color: #00aaff; }
    .tier-master .section-title svg { color: #00cc66; }

    @media (max-width: 768px) {
        .matrix-section {
            padding: 1.5rem;
        }

        .section-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .comparison-table th,
        .comparison-table td {
            padding: 0.625rem 0.5rem;
            font-size: 0.8rem;
        }

        .name-column {
            min-width: 120px;
        }
    }
</style>
