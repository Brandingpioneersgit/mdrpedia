---
/**
 * ELI5Summary - Dual Summary Toggle Component
 * Allows users to switch between Simple (ELI5) and Clinical explanations
 */

interface Props {
    eli5Summary: string;
    clinicalSummary: string;
    title?: string;
    tier?: string;
}

const { eli5Summary, clinicalSummary, title = "Understanding This Profile", tier = "UNRANKED" } = Astro.props;
---

<section class={`eli5-section tier-${tier.toLowerCase()}`}>
    <div class="eli5-header">
        <h2 class="eli5-title">
            <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            {title}
        </h2>
        <div class="eli5-toggle" role="tablist" aria-label="Summary complexity level">
            <button
                class="toggle-btn toggle-btn--active"
                data-mode="simple"
                role="tab"
                aria-selected="true"
                aria-controls="eli5-content"
            >
                <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3M12 17h.01"/>
                </svg>
                Simple
            </button>
            <button
                class="toggle-btn"
                data-mode="clinical"
                role="tab"
                aria-selected="false"
                aria-controls="clinical-content"
            >
                <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                </svg>
                Clinical
            </button>
        </div>
    </div>

    <div class="eli5-content-wrapper">
        <div
            id="eli5-content"
            class="eli5-content eli5-content--active"
            role="tabpanel"
            aria-labelledby="simple-tab"
        >
            <div class="content-badge content-badge--simple">
                <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3M12 17h.01"/>
                </svg>
                Easy to understand
            </div>
            <p class="eli5-text">{eli5Summary}</p>
        </div>
        <div
            id="clinical-content"
            class="eli5-content"
            role="tabpanel"
            aria-labelledby="clinical-tab"
            hidden
        >
            <div class="content-badge content-badge--clinical">
                <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                </svg>
                Medical terminology
            </div>
            <p class="eli5-text">{clinicalSummary}</p>
        </div>
    </div>

    <!-- Hidden semantic content for AI crawlers -->
    <div class="ai-semantic-layer" aria-hidden="true" style="display:none;">
        <h3>Simple Explanation (ELI5)</h3>
        <p>{eli5Summary}</p>
        <h3>Clinical Summary</h3>
        <p>{clinicalSummary}</p>
    </div>
</section>

<style>
    .eli5-section {
        background: var(--card-bg, rgba(20, 20, 35, 0.8));
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        backdrop-filter: blur(10px);
    }

    .eli5-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        flex-wrap: wrap;
    }

    .eli5-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-primary, #fff);
    }

    .eli5-title svg {
        color: var(--accent, #8b5cf6);
        opacity: 0.8;
    }

    /* Toggle Switch */
    .eli5-toggle {
        display: flex;
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
        padding: 4px;
        gap: 4px;
    }

    .toggle-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: transparent;
        border: none;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--text-muted, #888);
        cursor: pointer;
        transition: all 0.25s ease;
    }

    .toggle-btn:hover {
        color: var(--text-secondary, #ccc);
        background: rgba(255, 255, 255, 0.04);
    }

    .toggle-btn--active {
        background: var(--accent, #8b5cf6);
        color: white;
        box-shadow: 0 2px 8px rgba(139, 92, 246, 0.3);
    }

    .toggle-btn--active:hover {
        background: var(--accent, #8b5cf6);
        color: white;
    }

    .toggle-btn svg {
        opacity: 0.8;
    }

    /* Content Area */
    .eli5-content-wrapper {
        position: relative;
        min-height: 100px;
    }

    .eli5-content {
        opacity: 0;
        transform: translateY(8px);
        transition: opacity 0.3s ease, transform 0.3s ease;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        visibility: hidden;
    }

    .eli5-content--active {
        opacity: 1;
        transform: translateY(0);
        position: relative;
        visibility: visible;
    }

    .content-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 4px 12px;
        border-radius: 100px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1rem;
    }

    .content-badge--simple {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.2);
        color: #10b981;
    }

    .content-badge--clinical {
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.2);
        color: #60a5fa;
    }

    .eli5-text {
        font-size: 1.05rem;
        line-height: 1.8;
        color: var(--text-secondary, #ccc);
        margin: 0;
    }

    /* Tier-specific accent colors */
    .tier-titan .toggle-btn--active {
        background: linear-gradient(135deg, #ffd700, #f59e0b);
        box-shadow: 0 2px 12px rgba(255, 215, 0, 0.3);
    }
    .tier-titan .eli5-title svg { color: #ffd700; }

    .tier-elite .toggle-btn--active {
        background: linear-gradient(135deg, #00aaff, #0070f3);
        box-shadow: 0 2px 12px rgba(0, 170, 255, 0.3);
    }
    .tier-elite .eli5-title svg { color: #00aaff; }

    .tier-master .toggle-btn--active {
        background: linear-gradient(135deg, #00cc66, #10b981);
        box-shadow: 0 2px 12px rgba(0, 204, 102, 0.3);
    }
    .tier-master .eli5-title svg { color: #00cc66; }

    /* Responsive */
    @media (max-width: 640px) {
        .eli5-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .eli5-toggle {
            width: 100%;
        }

        .toggle-btn {
            flex: 1;
            justify-content: center;
        }

        .eli5-section {
            padding: 1.5rem;
        }
    }
</style>

<script>
    // Toggle between Simple and Clinical modes
    document.addEventListener('DOMContentLoaded', () => {
        const toggleBtns = document.querySelectorAll('.eli5-toggle .toggle-btn');
        const eli5Content = document.getElementById('eli5-content');
        const clinicalContent = document.getElementById('clinical-content');

        if (!eli5Content || !clinicalContent) return;

        toggleBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const mode = (btn as HTMLElement).dataset.mode;

                // Update buttons
                toggleBtns.forEach(b => {
                    b.classList.remove('toggle-btn--active');
                    b.setAttribute('aria-selected', 'false');
                });
                btn.classList.add('toggle-btn--active');
                btn.setAttribute('aria-selected', 'true');

                // Update content
                if (mode === 'simple') {
                    eli5Content.classList.add('eli5-content--active');
                    eli5Content.removeAttribute('hidden');
                    clinicalContent.classList.remove('eli5-content--active');
                    clinicalContent.setAttribute('hidden', '');
                } else {
                    clinicalContent.classList.add('eli5-content--active');
                    clinicalContent.removeAttribute('hidden');
                    eli5Content.classList.remove('eli5-content--active');
                    eli5Content.setAttribute('hidden', '');
                }
            });
        });
    });
</script>
