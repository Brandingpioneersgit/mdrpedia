---
/**
 * DataExportPanel - Raw Data Download Options
 * JSON, CSV, XML export capabilities
 */

import type { DataExportConfig } from '../../lib/ai-content-types';

interface Props {
    config: DataExportConfig;
    doctorName: string;
    doctorSlug: string;
    tier?: string;
}

const { config, doctorName, doctorSlug, tier = 'UNRANKED' } = Astro.props;

// Format icons
const formatIcons: Record<string, { icon: string; color: string; description: string }> = {
    JSON: { icon: '{ }', color: '#f59e0b', description: 'JavaScript Object Notation - ideal for APIs and web applications' },
    CSV: { icon: 'ðŸ“Š', color: '#10b981', description: 'Comma-Separated Values - import into Excel, Google Sheets, or databases' },
    XML: { icon: '< >', color: '#3b82f6', description: 'eXtensible Markup Language - structured data for interoperability' },
    RDF: { icon: 'ðŸ”—', color: '#8b5cf6', description: 'Resource Description Framework - linked data and semantic web' },
};
---

<section class={`export-section tier-${tier.toLowerCase()}`}>
    <div class="section-header">
        <h2 class="section-title">
            <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7 10 12 15 17 10"/>
                <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
            Data Export
        </h2>
        <span class="section-subtitle">Download raw data for research</span>
    </div>

    <!-- Available Formats -->
    <div class="formats-grid">
        {config.availableFormats.map(format => (
            <a
                href={`${config.apiEndpoint || `/api/doctor/${doctorSlug}/export`}?format=${format.toLowerCase()}`}
                class="format-card"
                style={`--format-color: ${formatIcons[format]?.color || '#6b7280'};`}
                download={`${doctorSlug}-data.${format.toLowerCase()}`}
            >
                <div class="format-icon">
                    {formatIcons[format]?.icon || 'ðŸ“„'}
                </div>
                <div class="format-info">
                    <span class="format-name">{format}</span>
                    <span class="format-desc">{formatIcons[format]?.description || 'Download data'}</span>
                </div>
                <svg class="download-icon" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                    <polyline points="7 10 12 15 17 10"/>
                    <line x1="12" y1="15" x2="12" y2="3"/>
                </svg>
            </a>
        ))}
    </div>

    <!-- Data Categories -->
    <div class="categories-section">
        <h3 class="categories-title">Available Data Categories</h3>
        <div class="categories-grid">
            {config.dataCategories.map(category => (
                <div class={`category-item ${category.isAvailable ? 'available' : 'unavailable'}`}>
                    <div class="category-status">
                        {category.isAvailable ? (
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
                                <path d="M22 4L12 14.01l-3-3"/>
                            </svg>
                        ) : (
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="15" y1="9" x2="9" y2="15"/>
                                <line x1="9" y1="9" x2="15" y2="15"/>
                            </svg>
                        )}
                    </div>
                    <div class="category-info">
                        <span class="category-label">{category.label}</span>
                        <span class="category-desc">{category.description}</span>
                    </div>
                </div>
            ))}
        </div>
    </div>

    <!-- Citation Format -->
    {config.citationFormat && (
        <div class="citation-section">
            <h3 class="citation-title">
                <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M6 17h3l2-4V7H5v6h3l-2 4zm8 0h3l2-4V7h-6v6h3l-2 4z"/>
                </svg>
                How to Cite
            </h3>
            <div class="citation-box">
                <code class="citation-text">{config.citationFormat}</code>
                <button class="copy-btn" data-citation={config.citationFormat} title="Copy citation">
                    <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
                    </svg>
                </button>
            </div>
        </div>
    )}

    <!-- Terms of Use -->
    {config.termsOfUse && (
        <div class="terms-section">
            <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="16" x2="12" y2="12"/>
                <line x1="12" y1="8" x2="12.01" y2="8"/>
            </svg>
            <p class="terms-text">{config.termsOfUse}</p>
        </div>
    )}

    <!-- API Endpoint Info -->
    {config.apiEndpoint && (
        <div class="api-section">
            <h3 class="api-title">
                <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                    <polyline points="15 3 21 3 21 9"/>
                    <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
                API Access
            </h3>
            <div class="api-endpoint">
                <code>{config.apiEndpoint}</code>
            </div>
        </div>
    )}

    <!-- Hidden semantic layer for AI -->
    <div class="ai-semantic-layer" aria-hidden="true" style="display:none;">
        <h3>Data Export Options for {doctorName}</h3>
        <p>Available formats: {config.availableFormats.join(', ')}</p>
        <p>Data categories: {config.dataCategories.filter(c => c.isAvailable).map(c => c.label).join(', ')}</p>
        {config.citationFormat && <p>Citation: {config.citationFormat}</p>}
        {config.apiEndpoint && <p>API endpoint: {config.apiEndpoint}</p>}
    </div>
</section>

<script>
    // Copy citation functionality
    document.querySelectorAll('.copy-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
            const citation = (btn as HTMLElement).dataset.citation;
            if (citation) {
                await navigator.clipboard.writeText(citation);
                btn.classList.add('copied');
                setTimeout(() => btn.classList.remove('copied'), 2000);
            }
        });
    });
</script>

<style>
    .export-section {
        background: var(--card-bg, rgba(20, 20, 35, 0.8));
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        backdrop-filter: blur(10px);
    }

    .section-header {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-primary, #fff);
    }

    .section-title svg {
        color: #10b981;
        opacity: 0.9;
    }

    .section-subtitle {
        font-size: 0.85rem;
        color: var(--text-muted, #888);
    }

    /* Formats Grid */
    .formats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .format-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.25rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.2s ease;
        cursor: pointer;
    }

    .format-card:hover {
        background: color-mix(in srgb, var(--format-color) 10%, transparent);
        border-color: var(--format-color);
        transform: translateY(-2px);
    }

    .format-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: color-mix(in srgb, var(--format-color) 15%, transparent);
        border-radius: 10px;
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--format-color);
        flex-shrink: 0;
    }

    .format-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .format-name {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-primary, #fff);
    }

    .format-desc {
        font-size: 0.7rem;
        color: var(--text-muted, #888);
        line-height: 1.4;
    }

    .download-icon {
        color: var(--format-color);
        opacity: 0.5;
        transition: opacity 0.2s;
    }

    .format-card:hover .download-icon {
        opacity: 1;
    }

    /* Categories */
    .categories-section {
        margin-bottom: 1.5rem;
        padding: 1.25rem;
        background: rgba(255, 255, 255, 0.02);
        border-radius: 12px;
    }

    .categories-title {
        font-size: 0.9rem;
        font-weight: 600;
        margin: 0 0 1rem;
        color: var(--text-primary, #fff);
    }

    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 0.75rem;
    }

    .category-item {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 0.75rem;
        background: rgba(255, 255, 255, 0.02);
        border-radius: 8px;
    }

    .category-item.unavailable {
        opacity: 0.5;
    }

    .category-status svg {
        flex-shrink: 0;
    }

    .category-item.available .category-status svg {
        color: #10b981;
    }

    .category-item.unavailable .category-status svg {
        color: #6b7280;
    }

    .category-info {
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
    }

    .category-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-primary, #fff);
    }

    .category-desc {
        font-size: 0.7rem;
        color: var(--text-muted, #888);
    }

    /* Citation */
    .citation-section {
        margin-bottom: 1.5rem;
    }

    .citation-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        font-weight: 600;
        margin: 0 0 0.75rem;
        color: var(--text-primary, #fff);
    }

    .citation-title svg {
        color: var(--text-muted, #888);
    }

    .citation-box {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 1rem;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 8px;
    }

    .citation-text {
        flex: 1;
        font-family: monospace;
        font-size: 0.8rem;
        color: var(--text-secondary, #ccc);
        line-height: 1.5;
        word-break: break-word;
    }

    .copy-btn {
        padding: 0.5rem;
        background: rgba(255, 255, 255, 0.05);
        border: none;
        border-radius: 6px;
        color: var(--text-muted, #888);
        cursor: pointer;
        transition: all 0.2s;
        flex-shrink: 0;
    }

    .copy-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        color: var(--text-primary, #fff);
    }

    .copy-btn.copied {
        background: rgba(16, 185, 129, 0.2);
        color: #10b981;
    }

    /* Terms */
    .terms-section {
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
        padding: 0.75rem;
        background: rgba(107, 114, 128, 0.1);
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .terms-section svg {
        color: #9ca3af;
        flex-shrink: 0;
        margin-top: 2px;
    }

    .terms-text {
        font-size: 0.75rem;
        color: var(--text-muted, #888);
        line-height: 1.5;
        margin: 0;
    }

    /* API Section */
    .api-section {
        padding: 1rem;
        background: rgba(139, 92, 246, 0.05);
        border: 1px solid rgba(139, 92, 246, 0.1);
        border-radius: 10px;
    }

    .api-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        font-weight: 600;
        margin: 0 0 0.5rem;
        color: var(--text-primary, #fff);
    }

    .api-title svg {
        color: #a78bfa;
    }

    .api-endpoint {
        padding: 0.5rem 0.75rem;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 6px;
    }

    .api-endpoint code {
        font-family: monospace;
        font-size: 0.8rem;
        color: #a78bfa;
    }

    /* Tier colors */
    .tier-titan .section-title svg { color: #ffd700; }
    .tier-elite .section-title svg { color: #00aaff; }
    .tier-master .section-title svg { color: #00cc66; }

    @media (max-width: 768px) {
        .export-section {
            padding: 1.5rem;
        }

        .formats-grid {
            grid-template-columns: 1fr;
        }

        .categories-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
