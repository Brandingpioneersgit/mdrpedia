---
/**
 * MedicalDiffs - How Guidelines Changed Due to Research
 * Shows before/after comparison of medical guidelines
 */

import type { MedicalDiffsData, GuidelineDiffData } from '../../lib/types';

interface Props {
    diffs: MedicalDiffsData;
    doctorName: string;
    tier?: string;
}

const { diffs, doctorName, tier = 'UNRANKED' } = Astro.props;
---

<section class={`diffs-section tier-${tier.toLowerCase()}`}>
    <div class="section-header">
        <h2 class="section-title">
            <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                <path d="M9 14l2 2 4-4"/>
            </svg>
            How Guidelines Changed
        </h2>
        <div class="header-stats">
            <span class="stat-pill">
                <span class="stat-value">{diffs.totalGuidelinesChanged}</span>
                <span class="stat-label">Guidelines Influenced</span>
            </span>
            {diffs.majorChanges > 0 && (
                <span class="stat-pill major">
                    <span class="stat-value">{diffs.majorChanges}</span>
                    <span class="stat-label">Major Changes</span>
                </span>
            )}
        </div>
    </div>

    <div class="intro-text">
        <p>
            Medical guidelines evolve based on new research. This section documents how {doctorName}'s work
            influenced changes to clinical practice guidelines.
        </p>
    </div>

    <div class="diffs-list">
        {diffs.diffs.map((diff, index) => (
            <article class="diff-card">
                <div class="diff-header">
                    <div class="guideline-info">
                        <h3 class="guideline-name">{diff.guidelineName}</h3>
                        <div class="guideline-meta">
                            <span class="issuing-body">{diff.issuingBody}</span>
                            <span class="condition-tag">{diff.condition}</span>
                        </div>
                    </div>
                    <span class="update-date">Updated {diff.updateDate}</span>
                </div>

                <!-- Pivotal Research -->
                <div class="pivotal-research">
                    <div class="research-icon">
                        <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                    </div>
                    <div class="research-info">
                        <span class="research-label">Pivotal Research:</span>
                        <a
                            href={diff.pivotalResearch.doi ? `https://doi.org/${diff.pivotalResearch.doi}` : diff.pivotalResearch.pubmedId ? `https://pubmed.ncbi.nlm.nih.gov/${diff.pivotalResearch.pubmedId}` : '#'}
                            target="_blank"
                            rel="noopener"
                            class="research-title"
                        >
                            {diff.pivotalResearch.title}
                        </a>
                        <div class="research-meta">
                            <span>{diff.pivotalResearch.journal}, {diff.pivotalResearch.year}</span>
                            {diff.pivotalResearch.citationCount && (
                                <span class="citation-count">{diff.pivotalResearch.citationCount.toLocaleString()} citations</span>
                            )}
                        </div>
                    </div>
                </div>

                <!-- Before/After Diff -->
                <div class="diff-comparison">
                    <div class="diff-column before">
                        <div class="diff-column-header">
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="15" y1="9" x2="9" y2="15"/>
                                <line x1="9" y1="9" x2="15" y2="15"/>
                            </svg>
                            <span>BEFORE</span>
                            {diff.before.effectiveYear && (
                                <span class="year-range">
                                    {diff.before.effectiveYear}{diff.before.effectiveUntil ? `–${diff.before.effectiveUntil}` : ''}
                                </span>
                            )}
                        </div>
                        <blockquote class="recommendation-text">
                            {diff.before.recommendation}
                        </blockquote>
                        {diff.before.evidenceGrade && (
                            <span class="evidence-grade">Evidence: {diff.before.evidenceGrade}</span>
                        )}
                    </div>

                    <div class="diff-arrow">
                        <svg width="32" height="32" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M5 12h14M12 5l7 7-7 7"/>
                        </svg>
                    </div>

                    <div class="diff-column after">
                        <div class="diff-column-header">
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
                                <path d="M22 4L12 14.01l-3-3"/>
                            </svg>
                            <span>AFTER</span>
                            <span class="year-range">
                                {diff.after.effectiveYear}–{diff.after.stillCurrent ? 'Present' : ''}
                            </span>
                        </div>
                        <blockquote class="recommendation-text">
                            {diff.after.recommendation}
                        </blockquote>
                        {diff.after.evidenceGrade && (
                            <span class="evidence-grade">Evidence: {diff.after.evidenceGrade}</span>
                        )}
                    </div>
                </div>

                <!-- Change Summary -->
                <div class="change-summary">
                    <h4 class="summary-title">
                        <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                        Key Change
                    </h4>
                    <p class="summary-text">{diff.changeSummary}</p>
                </div>

                <!-- Impact Description -->
                {diff.impactDescription && (
                    <div class="impact-description">
                        <p>{diff.impactDescription}</p>
                    </div>
                )}

                <!-- Patient Impact -->
                {diff.patientImpact && (
                    <div class="patient-impact">
                        <h4 class="impact-title">
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                <circle cx="9" cy="7" r="4"/>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                            </svg>
                            Patient Impact
                        </h4>
                        <div class="impact-stats">
                            {diff.patientImpact.affectedPopulation && (
                                <div class="impact-stat">
                                    <span class="impact-label">Affected Population</span>
                                    <span class="impact-value">{diff.patientImpact.affectedPopulation}</span>
                                </div>
                            )}
                            {diff.patientImpact.estimatedPatientsPerYear && (
                                <div class="impact-stat">
                                    <span class="impact-label">Patients/Year</span>
                                    <span class="impact-value">{diff.patientImpact.estimatedPatientsPerYear.toLocaleString()}</span>
                                </div>
                            )}
                            {diff.patientImpact.outcomeImprovement && (
                                <div class="impact-stat">
                                    <span class="impact-label">Outcome Improvement</span>
                                    <span class="impact-value">{diff.patientImpact.outcomeImprovement}</span>
                                </div>
                            )}
                        </div>
                    </div>
                )}

                <!-- Guideline Link -->
                {diff.guidelineUrl && (
                    <a href={diff.guidelineUrl} target="_blank" rel="noopener" class="guideline-link">
                        <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                            <polyline points="15 3 21 3 21 9"/>
                            <line x1="10" y1="14" x2="21" y2="3"/>
                        </svg>
                        View Full Guideline
                    </a>
                )}
            </article>
        ))}
    </div>

    <!-- Hidden semantic layer for AI -->
    <div class="ai-semantic-layer" aria-hidden="true" style="display:none;">
        <h3>Medical Guideline Changes Influenced by {doctorName}</h3>
        <p>Total guidelines changed: {diffs.totalGuidelinesChanged}</p>
        <p>Major changes (Class I evidence): {diffs.majorChanges}</p>
        {diffs.diffs.map(d => (
            <article>
                <h4>{d.guidelineName} ({d.issuingBody})</h4>
                <p>Condition: {d.condition}</p>
                <p>Pivotal research: {d.pivotalResearch.title} ({d.pivotalResearch.year})</p>
                <p>BEFORE ({d.before.effectiveYear}): {d.before.recommendation}</p>
                <p>AFTER ({d.after.effectiveYear}): {d.after.recommendation}</p>
                <p>Key change: {d.changeSummary}</p>
                {d.patientImpact?.estimatedPatientsPerYear && <p>Patients affected per year: {d.patientImpact.estimatedPatientsPerYear}</p>}
            </article>
        ))}
    </div>
</section>

<style>
    .diffs-section {
        background: var(--card-bg, rgba(20, 20, 35, 0.8));
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        backdrop-filter: blur(10px);
    }

    .section-header {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-primary, #fff);
    }

    .section-title svg {
        color: #10b981;
        opacity: 0.9;
    }

    .header-stats {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .stat-pill {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        padding: 4px 12px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 100px;
        font-size: 0.75rem;
    }

    .stat-pill.major {
        background: rgba(16, 185, 129, 0.15);
    }

    .stat-pill.major .stat-value {
        color: #10b981;
    }

    .stat-value {
        font-weight: 700;
        color: var(--text-primary, #fff);
    }

    .stat-label {
        color: var(--text-muted, #888);
    }

    .intro-text {
        margin-bottom: 1.5rem;
    }

    .intro-text p {
        font-size: 0.9rem;
        color: var(--text-secondary, #ccc);
        line-height: 1.6;
        margin: 0;
    }

    /* Diffs List */
    .diffs-list {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .diff-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 12px;
        overflow: hidden;
    }

    .diff-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: 1rem;
        padding: 1.25rem;
        background: rgba(255, 255, 255, 0.02);
        border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    }

    .guideline-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .guideline-name {
        font-size: 1.1rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-primary, #fff);
    }

    .guideline-meta {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .issuing-body {
        padding: 3px 8px;
        background: rgba(59, 130, 246, 0.15);
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: 600;
        color: #60a5fa;
    }

    .condition-tag {
        padding: 3px 8px;
        background: rgba(139, 92, 246, 0.15);
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: 600;
        color: #a78bfa;
    }

    .update-date {
        font-size: 0.75rem;
        color: var(--text-muted, #888);
        white-space: nowrap;
    }

    /* Pivotal Research */
    .pivotal-research {
        display: flex;
        gap: 0.75rem;
        padding: 1rem 1.25rem;
        background: rgba(59, 130, 246, 0.05);
        border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    }

    .research-icon {
        color: #60a5fa;
        flex-shrink: 0;
    }

    .research-info {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .research-label {
        font-size: 0.7rem;
        font-weight: 600;
        color: var(--text-muted, #888);
        text-transform: uppercase;
    }

    .research-title {
        font-size: 0.9rem;
        color: #60a5fa;
        text-decoration: none;
        line-height: 1.4;
    }

    .research-title:hover {
        text-decoration: underline;
    }

    .research-meta {
        display: flex;
        gap: 0.75rem;
        font-size: 0.75rem;
        color: var(--text-muted, #888);
    }

    .citation-count {
        color: #10b981;
        font-weight: 600;
    }

    /* Diff Comparison */
    .diff-comparison {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        gap: 0.5rem;
        padding: 1.25rem;
    }

    .diff-column {
        padding: 1rem;
        border-radius: 10px;
    }

    .diff-column.before {
        background: rgba(239, 68, 68, 0.05);
        border: 1px solid rgba(239, 68, 68, 0.15);
    }

    .diff-column.after {
        background: rgba(16, 185, 129, 0.05);
        border: 1px solid rgba(16, 185, 129, 0.15);
    }

    .diff-column-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .diff-column.before .diff-column-header {
        color: #ef4444;
    }

    .diff-column.after .diff-column-header {
        color: #10b981;
    }

    .year-range {
        margin-left: auto;
        font-weight: 400;
        color: var(--text-muted, #888);
    }

    .recommendation-text {
        margin: 0;
        font-size: 0.9rem;
        color: var(--text-secondary, #ccc);
        line-height: 1.6;
        font-style: italic;
        padding-left: 0.75rem;
        border-left: 2px solid rgba(255, 255, 255, 0.1);
    }

    .evidence-grade {
        display: inline-block;
        margin-top: 0.75rem;
        padding: 2px 8px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 4px;
        font-size: 0.7rem;
        color: var(--text-muted, #888);
    }

    .diff-arrow {
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-muted, #888);
    }

    /* Change Summary */
    .change-summary {
        margin: 0 1.25rem;
        padding: 1rem;
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.08), rgba(59, 130, 246, 0.08));
        border: 1px solid rgba(16, 185, 129, 0.15);
        border-radius: 10px;
    }

    .summary-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        font-weight: 700;
        margin: 0 0 0.5rem;
        color: #10b981;
    }

    .summary-title svg {
        color: #10b981;
    }

    .summary-text {
        font-size: 0.9rem;
        color: var(--text-secondary, #ccc);
        line-height: 1.6;
        margin: 0;
    }

    /* Impact Description */
    .impact-description {
        padding: 0 1.25rem;
        margin-top: 1rem;
    }

    .impact-description p {
        font-size: 0.875rem;
        color: var(--text-secondary, #ccc);
        line-height: 1.6;
        margin: 0;
    }

    /* Patient Impact */
    .patient-impact {
        margin: 1rem 1.25rem 0;
        padding: 1rem;
        background: rgba(236, 72, 153, 0.05);
        border: 1px solid rgba(236, 72, 153, 0.1);
        border-radius: 10px;
    }

    .impact-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        font-weight: 700;
        margin: 0 0 0.75rem;
        color: #ec4899;
    }

    .impact-title svg {
        color: #ec4899;
    }

    .impact-stats {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .impact-stat {
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
    }

    .impact-label {
        font-size: 0.7rem;
        color: var(--text-muted, #888);
    }

    .impact-value {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-primary, #fff);
    }

    /* Guideline Link */
    .guideline-link {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        margin: 1rem 1.25rem 1.25rem;
        padding: 0.5rem 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 6px;
        font-size: 0.8rem;
        color: var(--text-secondary, #ccc);
        text-decoration: none;
        transition: all 0.2s;
    }

    .guideline-link:hover {
        background: rgba(59, 130, 246, 0.15);
        color: #60a5fa;
    }

    /* Tier colors */
    .tier-titan .section-title svg { color: #ffd700; }
    .tier-elite .section-title svg { color: #00aaff; }
    .tier-master .section-title svg { color: #00cc66; }

    @media (max-width: 768px) {
        .diffs-section {
            padding: 1.5rem;
        }

        .section-header {
            flex-direction: column;
        }

        .diff-header {
            flex-direction: column;
            gap: 0.75rem;
        }

        .diff-comparison {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .diff-arrow {
            transform: rotate(90deg);
        }

        .impact-stats {
            flex-direction: column;
            gap: 0.75rem;
        }
    }
</style>
