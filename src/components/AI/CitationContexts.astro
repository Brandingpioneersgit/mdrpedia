---
/**
 * CitationContexts - Dense Citation Context Display
 * Shows WHY papers were cited, not just citation counts
 */

import type { CitationContextSummary, CitationContext } from '../../lib/ai-content-types';
import { CITATION_REASON_LABELS } from '../../lib/ai-content-types';

interface Props {
    summary: CitationContextSummary;
    doctorName: string;
    tier?: string;
}

const { summary, doctorName, tier = 'UNRANKED' } = Astro.props;

// Impact category config
const impactConfig: Record<CitationContext['impactCategory'], { label: string; color: string }> = {
    SEMINAL: { label: 'Seminal', color: '#ffd700' },
    SIGNIFICANT: { label: 'Significant', color: '#10b981' },
    SUPPORTING: { label: 'Supporting', color: '#3b82f6' },
    MINOR: { label: 'Minor', color: '#6b7280' },
};

// Reason icons
const reasonIcons: Record<CitationContext['citationReason'], string> = {
    METHODOLOGY: 'üî¨',
    FOUNDATION: 'üèõÔ∏è',
    COMPARISON: '‚öñÔ∏è',
    VALIDATION: '‚úì',
    EXTENSION: 'üîó',
    CRITICISM: 'üí≠',
    CLINICAL_APPLICATION: 'üè•',
};
---

<section class={`citation-context-section tier-${tier.toLowerCase()}`}>
    <div class="section-header">
        <h2 class="section-title">
            <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                <polyline points="14 2 14 8 20 8"/>
                <line x1="16" y1="13" x2="8" y2="13"/>
                <line x1="16" y1="17" x2="8" y2="17"/>
            </svg>
            Citation Impact Analysis
        </h2>
        <span class="total-badge">{summary.totalCitations.toLocaleString()} citations analyzed</span>
    </div>

    <!-- Citation Reasons Breakdown -->
    <div class="reasons-grid">
        {Object.entries(summary.citationsByReason).map(([reason, count]) => (
            <div class="reason-card">
                <span class="reason-icon">{reasonIcons[reason as CitationContext['citationReason']]}</span>
                <div class="reason-content">
                    <span class="reason-count">{count.toLocaleString()}</span>
                    <span class="reason-label">{CITATION_REASON_LABELS[reason as CitationContext['citationReason']]}</span>
                </div>
            </div>
        ))}
    </div>

    <!-- Seminal Citations (Most Important) -->
    {summary.seminalCitations.length > 0 && (
        <div class="seminal-section">
            <h3 class="subsection-title">
                <span class="subsection-icon">‚≠ê</span>
                Seminal Citations
                <span class="help-text">Work that fundamentally shaped the field</span>
            </h3>
            <div class="citations-list">
                {summary.seminalCitations.slice(0, 5).map(citation => (
                    <div class="citation-card seminal">
                        <div class="citation-header">
                            <span class={`impact-badge ${citation.impactCategory.toLowerCase()}`}>
                                {impactConfig[citation.impactCategory].label}
                            </span>
                            <span class="citation-year">{citation.citingPaperYear}</span>
                        </div>
                        <p class="citing-paper">{citation.citingPaperTitle}</p>
                        <blockquote class="citation-context">
                            "{citation.citationContext}"
                        </blockquote>
                        <div class="citation-meta">
                            <span class="reason-tag">
                                {reasonIcons[citation.citationReason]} {CITATION_REASON_LABELS[citation.citationReason]}
                            </span>
                            {citation.journalName && (
                                <span class="journal-name">{citation.journalName}</span>
                            )}
                        </div>
                    </div>
                ))}
            </div>
        </div>
    )}

    <!-- Top Citing Papers -->
    {summary.topCitingPapers.length > 0 && (
        <div class="top-citations-section">
            <h3 class="subsection-title">
                <span class="subsection-icon">üìä</span>
                Notable Citing Papers
            </h3>
            <div class="citations-list compact">
                {summary.topCitingPapers.slice(0, 8).map(citation => (
                    <div class="citation-card compact">
                        <div class="citation-header">
                            <span class={`impact-badge small ${citation.impactCategory.toLowerCase()}`}>
                                {impactConfig[citation.impactCategory].label}
                            </span>
                            <span class="reason-tag small">
                                {reasonIcons[citation.citationReason]}
                            </span>
                        </div>
                        <p class="citing-paper">{citation.citingPaperTitle}</p>
                        <span class="citation-year">{citation.citingPaperYear}</span>
                    </div>
                ))}
            </div>
        </div>
    )}

    <!-- Yearly Trend -->
    {summary.yearlyTrend && summary.yearlyTrend.length > 0 && (
        <div class="trend-section">
            <h3 class="subsection-title">
                <span class="subsection-icon">üìà</span>
                Citation Trend
            </h3>
            <div class="trend-bars">
                {summary.yearlyTrend.slice(-10).map(entry => {
                    const maxCount = Math.max(...summary.yearlyTrend!.map(e => e.count));
                    const height = (entry.count / maxCount) * 100;
                    return (
                        <div class="trend-bar-container">
                            <div class="trend-bar" style={`height: ${height}%;`}>
                                <span class="bar-value">{entry.count}</span>
                            </div>
                            <span class="bar-year">{entry.year}</span>
                        </div>
                    );
                })}
            </div>
        </div>
    )}

    <!-- Hidden semantic layer for AI -->
    <div class="ai-semantic-layer" aria-hidden="true" style="display:none;">
        <h3>Citation Context Analysis for {doctorName}</h3>
        <p>Total citations analyzed: {summary.totalCitations}</p>
        <h4>Citations by Reason:</h4>
        <ul>
            {Object.entries(summary.citationsByReason).map(([reason, count]) => (
                <li>{CITATION_REASON_LABELS[reason as CitationContext['citationReason']]}: {count}</li>
            ))}
        </ul>
        <h4>Seminal Works:</h4>
        {summary.seminalCitations.map(c => (
            <p>"{c.citationContext}" ‚Äî cited in {c.citingPaperTitle} ({c.citingPaperYear}) for {CITATION_REASON_LABELS[c.citationReason]}</p>
        ))}
    </div>
</section>

<style>
    .citation-context-section {
        background: var(--card-bg, rgba(20, 20, 35, 0.8));
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        backdrop-filter: blur(10px);
    }

    .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-primary, #fff);
    }

    .section-title svg {
        color: #f59e0b;
        opacity: 0.9;
    }

    .total-badge {
        padding: 4px 12px;
        background: rgba(245, 158, 11, 0.15);
        border-radius: 100px;
        font-size: 0.75rem;
        font-weight: 600;
        color: #fbbf24;
    }

    /* Reasons Grid */
    .reasons-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 0.75rem;
        margin-bottom: 2rem;
    }

    .reason-card {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 10px;
    }

    .reason-icon {
        font-size: 1.25rem;
    }

    .reason-content {
        display: flex;
        flex-direction: column;
    }

    .reason-count {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text-primary, #fff);
    }

    .reason-label {
        font-size: 0.7rem;
        color: var(--text-muted, #888);
    }

    /* Subsections */
    .seminal-section,
    .top-citations-section,
    .trend-section {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.04);
    }

    .subsection-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 1rem;
        color: var(--text-primary, #fff);
    }

    .subsection-icon {
        font-size: 1rem;
    }

    .help-text {
        font-size: 0.75rem;
        color: var(--text-muted, #888);
        font-weight: 400;
        margin-left: auto;
    }

    /* Citations List */
    .citations-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .citations-list.compact {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 0.75rem;
    }

    .citation-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 10px;
        padding: 1.25rem;
        transition: all 0.2s ease;
    }

    .citation-card:hover {
        background: rgba(255, 255, 255, 0.03);
        border-color: rgba(255, 255, 255, 0.1);
    }

    .citation-card.seminal {
        border-left: 3px solid #ffd700;
    }

    .citation-card.compact {
        padding: 1rem;
    }

    .citation-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .impact-badge {
        padding: 2px 8px;
        border-radius: 100px;
        font-size: 0.65rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .impact-badge.seminal {
        background: rgba(255, 215, 0, 0.15);
        color: #ffd700;
    }

    .impact-badge.significant {
        background: rgba(16, 185, 129, 0.15);
        color: #10b981;
    }

    .impact-badge.supporting {
        background: rgba(59, 130, 246, 0.15);
        color: #3b82f6;
    }

    .impact-badge.minor {
        background: rgba(107, 114, 128, 0.15);
        color: #9ca3af;
    }

    .impact-badge.small {
        padding: 1px 6px;
        font-size: 0.6rem;
    }

    .citation-year {
        font-size: 0.75rem;
        color: var(--text-muted, #888);
        margin-left: auto;
    }

    .citing-paper {
        font-size: 0.9rem;
        color: var(--text-secondary, #ccc);
        margin: 0 0 0.75rem;
        line-height: 1.5;
    }

    .citation-context {
        margin: 0.75rem 0;
        padding: 0.75rem 1rem;
        background: rgba(255, 255, 255, 0.03);
        border-left: 2px solid rgba(255, 215, 0, 0.3);
        font-size: 0.85rem;
        font-style: italic;
        color: var(--text-secondary, #ccc);
        line-height: 1.6;
    }

    .citation-meta {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .reason-tag {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        padding: 3px 8px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 4px;
        font-size: 0.7rem;
        color: var(--text-secondary, #ccc);
    }

    .reason-tag.small {
        padding: 2px 6px;
        font-size: 0.85rem;
    }

    .journal-name {
        font-size: 0.75rem;
        color: var(--text-muted, #888);
    }

    /* Trend Bars */
    .trend-bars {
        display: flex;
        align-items: flex-end;
        gap: 0.5rem;
        height: 120px;
        padding-top: 1rem;
    }

    .trend-bar-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100%;
    }

    .trend-bar {
        width: 100%;
        max-width: 40px;
        background: linear-gradient(to top, rgba(245, 158, 11, 0.3), rgba(245, 158, 11, 0.6));
        border-radius: 4px 4px 0 0;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        position: relative;
        transition: all 0.3s ease;
    }

    .trend-bar:hover {
        background: linear-gradient(to top, rgba(245, 158, 11, 0.4), rgba(245, 158, 11, 0.8));
    }

    .bar-value {
        position: absolute;
        top: -1.5rem;
        font-size: 0.7rem;
        font-weight: 600;
        color: var(--text-secondary, #ccc);
    }

    .bar-year {
        font-size: 0.65rem;
        color: var(--text-muted, #888);
        margin-top: 0.5rem;
    }

    /* Tier colors */
    .tier-titan .section-title svg { color: #ffd700; }
    .tier-elite .section-title svg { color: #00aaff; }
    .tier-master .section-title svg { color: #00cc66; }

    @media (max-width: 768px) {
        .citation-context-section {
            padding: 1.5rem;
        }

        .reasons-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .citations-list.compact {
            grid-template-columns: 1fr;
        }

        .trend-bars {
            height: 80px;
        }
    }
</style>
