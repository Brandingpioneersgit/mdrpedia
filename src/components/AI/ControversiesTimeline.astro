---
/**
 * ControversiesTimeline - Scientific consensus evolution visualization
 * Shows how scientific understanding has evolved over time
 */

import type { ConsensusTimelineData, ConsensusEventData } from '../../lib/types';

interface Props {
    timeline: ConsensusTimelineData;
    tier?: string;
}

const { timeline, tier = "UNRANKED" } = Astro.props;

// Status configuration
const statusConfig: Record<ConsensusEventData['status'], { label: string; color: string; icon: string }> = {
    PROPOSED: { label: 'Proposed', color: '#6b7280', icon: 'lightbulb' },
    DEBATED: { label: 'Under Debate', color: '#f59e0b', icon: 'message-circle' },
    EMERGING: { label: 'Emerging', color: '#3b82f6', icon: 'trending-up' },
    ACCEPTED: { label: 'Accepted', color: '#10b981', icon: 'check-circle' },
    GOLD_STANDARD: { label: 'Gold Standard', color: '#ffd700', icon: 'star' },
    SUPERSEDED: { label: 'Superseded', color: '#9ca3af', icon: 'archive' },
    DISPROVEN: { label: 'Disproven', color: '#ef4444', icon: 'x-circle' },
};

// Sort events by date
const sortedEvents = [...timeline.events].sort((a, b) =>
    new Date(a.date).getTime() - new Date(b.date).getTime()
);

const currentStatusConfig = statusConfig[timeline.currentStatus];
---

<section class={`consensus-timeline-section tier-${tier.toLowerCase()}`}>
    <div class="timeline-header">
        <div class="header-content">
            <h2 class="timeline-title">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                {timeline.topic}
            </h2>
            <p class="timeline-subtitle">Scientific Consensus Evolution</p>
        </div>
        <div class="current-status" style={`--status-color: ${currentStatusConfig.color};`}>
            <span class="status-label">Current Status</span>
            <span class="status-value">{currentStatusConfig.label}</span>
        </div>
    </div>

    <!-- Timeline Visualization -->
    <div class="timeline-container">
        <div class="timeline-line"></div>

        {sortedEvents.map((event, index) => {
            const config = statusConfig[event.status];
            const isFirst = index === 0;
            const isLast = index === sortedEvents.length - 1;
            const year = new Date(event.date).getFullYear();

            return (
                <div class={`timeline-event ${isLast ? 'timeline-event--current' : ''}`}>
                    <div class="event-marker" style={`--marker-color: ${config.color};`}>
                        <div class="marker-dot"></div>
                        <span class="marker-year">{year}</span>
                    </div>

                    <div class="event-card">
                        <div class="event-header">
                            <span class="event-status" style={`--status-color: ${config.color};`}>
                                {config.label}
                            </span>
                            <span class="event-date">
                                {new Date(event.date).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
                            </span>
                        </div>

                        <h3 class="event-title">{event.title}</h3>
                        <p class="event-description">{event.description}</p>

                        {event.keyFigures && event.keyFigures.length > 0 && (
                            <div class="event-figures">
                                <span class="figures-label">Key Figures:</span>
                                <div class="figures-list">
                                    {event.keyFigures.map(figure => (
                                        <span class="figure-tag">{figure}</span>
                                    ))}
                                </div>
                            </div>
                        )}

                        {event.supportingEvidence && event.supportingEvidence.length > 0 && (
                            <details class="event-evidence">
                                <summary>Supporting Evidence ({event.supportingEvidence.length})</summary>
                                <ul class="evidence-list">
                                    {event.supportingEvidence.map(evidence => (
                                        <li>{evidence}</li>
                                    ))}
                                </ul>
                            </details>
                        )}

                        {event.opposingViews && event.opposingViews.length > 0 && (
                            <details class="event-opposing">
                                <summary>Opposing Views ({event.opposingViews.length})</summary>
                                <ul class="opposing-list">
                                    {event.opposingViews.map(view => (
                                        <li>{view}</li>
                                    ))}
                                </ul>
                            </details>
                        )}

                        {event.sourceUrl && (
                            <a href={event.sourceUrl} target="_blank" rel="noopener" class="event-source">
                                <svg width="12" height="12" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6"/>
                                    <polyline points="15 3 21 3 21 9"/>
                                    <line x1="10" y1="14" x2="21" y2="3"/>
                                </svg>
                                View Source
                            </a>
                        )}
                    </div>
                </div>
            );
        })}
    </div>

    <!-- Related Tags -->
    {((timeline.relatedTechniques?.length || 0) > 0 || (timeline.relatedConditions?.length || 0) > 0) && (
        <div class="related-section">
            {timeline.relatedTechniques && timeline.relatedTechniques.length > 0 && (
                <div class="related-group">
                    <span class="related-label">Related Techniques:</span>
                    <div class="related-tags">
                        {timeline.relatedTechniques.map(tech => (
                            <span class="related-tag related-tag--technique">{tech}</span>
                        ))}
                    </div>
                </div>
            )}
            {timeline.relatedConditions && timeline.relatedConditions.length > 0 && (
                <div class="related-group">
                    <span class="related-label">Related Conditions:</span>
                    <div class="related-tags">
                        {timeline.relatedConditions.map(cond => (
                            <span class="related-tag related-tag--condition">{cond}</span>
                        ))}
                    </div>
                </div>
            )}
        </div>
    )}

    <!-- Hidden semantic content for AI crawlers -->
    <div class="ai-semantic-layer" aria-hidden="true" style="display:none;">
        <h3>Scientific Consensus Timeline: {timeline.topic}</h3>
        <p>Current Status: {currentStatusConfig.label}</p>
        {sortedEvents.map(event => (
            <div>
                <h4>{event.date}: {event.title}</h4>
                <p>Status: {statusConfig[event.status].label}</p>
                <p>{event.description}</p>
            </div>
        ))}
    </div>
</section>

<style>
    .consensus-timeline-section {
        background: var(--card-bg, rgba(20, 20, 35, 0.8));
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        backdrop-filter: blur(10px);
    }

    .timeline-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: 1.5rem;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        flex-wrap: wrap;
    }

    .header-content {
        flex: 1;
    }

    .timeline-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0 0 0.25rem;
        color: var(--text-primary, #fff);
    }

    .timeline-title svg {
        color: var(--accent, #8b5cf6);
        opacity: 0.8;
    }

    .timeline-subtitle {
        font-size: 0.85rem;
        color: var(--text-muted, #888);
        margin: 0;
    }

    .current-status {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem 1.5rem;
        background: color-mix(in srgb, var(--status-color) 10%, transparent);
        border: 1px solid color-mix(in srgb, var(--status-color) 30%, transparent);
        border-radius: 12px;
    }

    .status-label {
        font-size: 0.65rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--text-muted, #888);
        margin-bottom: 0.25rem;
    }

    .status-value {
        font-size: 1rem;
        font-weight: 700;
        color: var(--status-color);
    }

    /* Timeline */
    .timeline-container {
        position: relative;
        padding-left: 3rem;
    }

    .timeline-line {
        position: absolute;
        left: 0.5rem;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(to bottom, rgba(255, 255, 255, 0.1), rgba(139, 92, 246, 0.3), rgba(16, 185, 129, 0.3));
    }

    .timeline-event {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .timeline-event:last-child {
        margin-bottom: 0;
    }

    .event-marker {
        position: absolute;
        left: -3rem;
        top: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 2.5rem;
    }

    .marker-dot {
        width: 12px;
        height: 12px;
        background: var(--marker-color);
        border-radius: 50%;
        border: 3px solid rgba(20, 20, 35, 1);
        box-shadow: 0 0 0 2px var(--marker-color);
    }

    .timeline-event--current .marker-dot {
        width: 16px;
        height: 16px;
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% { box-shadow: 0 0 0 2px var(--marker-color), 0 0 0 4px transparent; }
        50% { box-shadow: 0 0 0 2px var(--marker-color), 0 0 0 8px color-mix(in srgb, var(--marker-color) 30%, transparent); }
    }

    .marker-year {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        font-weight: 600;
        color: var(--text-muted, #888);
        margin-top: 0.35rem;
    }

    .event-card {
        padding: 1.25rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        border-radius: 12px;
    }

    .event-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
    }

    .event-status {
        padding: 3px 10px;
        background: color-mix(in srgb, var(--status-color) 15%, transparent);
        border-radius: 100px;
        font-size: 0.7rem;
        font-weight: 600;
        color: var(--status-color);
        text-transform: uppercase;
        letter-spacing: 0.03em;
    }

    .event-date {
        font-size: 0.75rem;
        color: var(--text-muted, #888);
    }

    .event-title {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-primary, #fff);
        margin: 0 0 0.5rem;
    }

    .event-description {
        font-size: 0.9rem;
        line-height: 1.6;
        color: var(--text-secondary, #ccc);
        margin: 0;
    }

    .event-figures {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .figures-label {
        font-size: 0.7rem;
        font-weight: 600;
        color: var(--text-muted, #888);
    }

    .figures-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.35rem;
    }

    .figure-tag {
        padding: 3px 10px;
        background: rgba(139, 92, 246, 0.1);
        border-radius: 100px;
        font-size: 0.75rem;
        color: #a78bfa;
    }

    /* Evidence Details */
    .event-evidence,
    .event-opposing {
        margin-top: 1rem;
    }

    .event-evidence summary,
    .event-opposing summary {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--text-secondary, #ccc);
        cursor: pointer;
        padding: 0.5rem 0;
    }

    .evidence-list,
    .opposing-list {
        margin: 0.5rem 0 0;
        padding-left: 1.2rem;
        font-size: 0.85rem;
        color: var(--text-muted, #888);
    }

    .evidence-list li { color: #10b981; }
    .opposing-list li { color: #f59e0b; }

    .event-source {
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        margin-top: 1rem;
        font-size: 0.8rem;
        color: var(--accent, #8b5cf6);
        text-decoration: none;
    }

    .event-source:hover {
        text-decoration: underline;
    }

    /* Related Section */
    .related-section {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--card-border, rgba(255, 255, 255, 0.06));
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .related-group {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .related-label {
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--text-muted, #888);
    }

    .related-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.35rem;
    }

    .related-tag {
        padding: 4px 12px;
        border-radius: 100px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .related-tag--technique {
        background: rgba(139, 92, 246, 0.1);
        color: #a78bfa;
    }

    .related-tag--condition {
        background: rgba(236, 72, 153, 0.1);
        color: #f472b6;
    }

    /* Tier colors */
    .tier-titan .timeline-title svg { color: #ffd700; }
    .tier-elite .timeline-title svg { color: #00aaff; }
    .tier-master .timeline-title svg { color: #00cc66; }

    /* Responsive */
    @media (max-width: 640px) {
        .consensus-timeline-section {
            padding: 1.5rem;
        }

        .timeline-header {
            flex-direction: column;
        }

        .current-status {
            width: 100%;
            flex-direction: row;
            justify-content: center;
            gap: 0.75rem;
        }

        .timeline-container {
            padding-left: 2.5rem;
        }

        .event-marker {
            left: -2.5rem;
        }
    }
</style>
